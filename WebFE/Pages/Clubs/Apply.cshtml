@page "{clubId:int}"
@model WebFE.Pages.Clubs.ApplyModel
@{
    ViewData["Title"] = $"Apply to {Model.ClubName}";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container my-5" style="max-width: 900px;">
    <div class="row">
        <!-- Main Content -->
        <div class="col-12" id="mainContent">
            <!-- Show error message if any -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i data-lucide="alert-triangle" style="width: 20px; height: 20px;"></i>
                    <strong>Error:</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Header -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ClubLogoUrl))
                    {
                        <img src="@Model.ClubLogoUrl" alt="@Model.ClubName" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 2rem;">
                            @(string.IsNullOrEmpty(Model.ClubName) ? "C" : Model.ClubName.Substring(0, 1))
                        </div>
                    }
                </div>
                <h2 class="fw-bold">Apply to @Model.ClubName</h2>
                <p class="text-muted">Join our community and make a difference!</p>
            </div>

            <!-- Debug Info removed for production -->

            @if (Model.ExistingRequest != null)
            {
                <!-- Show existing request status -->
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            @{
                                var statusIcon = Model.ExistingRequest.Status == "Pending" ? "clock" : 
                                               Model.ExistingRequest.Status == "Approved" ? "check-circle" : "x-circle";
                                var statusColor = Model.ExistingRequest.Status == "Pending" ? "warning" : 
                                                Model.ExistingRequest.Status == "Approved" ? "success" : "danger";
                            }
                            <div class="mb-3">
                                <i data-lucide="@statusIcon" style="width: 64px; height: 64px; color: var(--bs-@statusColor);"></i>
                            </div>
                            <h3 class="text-@statusColor">Application @Model.ExistingRequest.Status</h3>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted small">Applied Date</label>
                                <p class="fw-semibold">@Model.ExistingRequest.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.ExistingRequest.DepartmentName))
                            {
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">Department</label>
                                    <p class="fw-semibold">@Model.ExistingRequest.DepartmentName</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.ExistingRequest.Motivation))
                            {
                                <div class="col-12">
                                    <label class="form-label text-muted small">Your Motivation</label>
                                    <p class="border p-3 rounded bg-light">@Model.ExistingRequest.Motivation</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.ExistingRequest.CvUrl))
                            {
                                <div class="col-12">
                                    <label class="form-label text-muted small">Your CV</label>
                                    <div class="mt-2">
                                        <button type="button" class="btn view-cv-btn" data-cv-url="@Model.ExistingRequest.CvUrl" data-cv-title="My CV - @Model.ClubName">
                                            <i data-lucide="file-text" style="width: 18px; height: 18px;"></i>
                                            View Uploaded CV
                                        </button>
                                    </div>
                                </div>
                            }
                            @if (Model.ExistingRequest.ProcessedAt.HasValue)
                            {
                                <div class="col-md-6">
                                    <label class="form-label text-muted small">Processed Date</label>
                                    <p class="fw-semibold">@Model.ExistingRequest.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ExistingRequest.ProcessedByName))
                                {
                                    <div class="col-md-6">
                                        <label class="form-label text-muted small">Processed By</label>
                                        <p class="fw-semibold">@Model.ExistingRequest.ProcessedByName</p>
                                    </div>
                                }
                            }
                        </div>

                        <!-- Interview Information (loaded via JavaScript) -->
                        <div id="interviewSection" class="mt-4"></div>

                        @if (Model.ExistingRequest.Status == "Pending")
                        {
                            @if (!Model.ExistingRequest.HasInterview)
                            {
                                <!-- Allow edit if no interview scheduled yet -->
                                <div class="alert alert-warning mt-4 mb-0">
                                    <i data-lucide="edit" style="width: 18px; height: 18px;"></i>
                                    You can still edit your application before the interview is scheduled.
                                    <button type="button" class="btn btn-sm btn-primary ms-2" data-bs-toggle="offcanvas" data-bs-target="#editOffcanvas">
                                        <i data-lucide="edit-2" style="width: 14px; height: 14px;"></i>
                                        Edit Application
                                    </button>
                                </div>
                            }
                            else
                            {
                                <!-- Cannot edit after interview scheduled -->
                                <div class="alert alert-info mt-4 mb-0">
                                    <i data-lucide="info" style="width: 18px; height: 18px;"></i>
                                    Your application is being reviewed. An interview has been scheduled. You cannot edit your application at this time.
                                </div>
                            }
                        }
                        else if (Model.ExistingRequest.Status == "Approved")
                        {
                            <div class="alert alert-success mt-4 mb-0">
                                <i data-lucide="check-circle" style="width: 18px; height: 18px;"></i>
                                <strong>Congratulations!</strong> You are now a member of @Model.ClubName!
                            </div>
                        }
                        else if (Model.ExistingRequest.Status == "Rejected")
                        {
                            <div class="alert alert-danger mt-4 mb-0">
                                <i data-lucide="x-circle" style="width: 18px; height: 18px;"></i>
                                Your application was not approved. Please contact the club manager for more information.
                            </div>
                        }
                    </div>
                </div>

                <!-- Edit Form Offcanvas (slides from right) -->
                @if (Model.ExistingRequest != null && Model.ExistingRequest.Status == "Pending" && !Model.ExistingRequest.HasInterview)
                {
                    <div class="offcanvas offcanvas-end" tabindex="-1" id="editOffcanvas" aria-labelledby="editOffcanvasLabel" style="width: 500px;">
                        <div class="offcanvas-header bg-primary text-white">
                            <h5 class="offcanvas-title" id="editOffcanvasLabel">
                                <i data-lucide="edit-3" style="width: 20px; height: 20px;"></i>
                                Edit Your Application
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <form id="editForm">
                                <!-- Department Selection -->
                                <div class="mb-4">
                                    <label for="editDepartmentSelect" class="form-label fw-semibold">
                                        <i data-lucide="briefcase" style="width: 18px; height: 18px;"></i>
                                        Choose Department
                                    </label>
                                    <select class="form-select" id="editDepartmentSelect" name="departmentId">
                                        <option value="">-- No specific department --</option>
                                        @foreach (var dept in Model.Departments)
                                        {
                                            var isSelected = Model.ExistingRequest.DepartmentId == dept.Id;
                                            <option value="@dept.Id" selected="@isSelected">
                                                @dept.Name
                                                @if (dept.MemberCount > 0)
                                                {
                                                    <text>(@dept.MemberCount members)</text>
                                                }
                                            </option>
                                        }
                                    </select>
                                </div>

                                <!-- Motivation -->
                                <div class="mb-4">
                                    <label for="editMotivation" class="form-label fw-semibold">
                                        <i data-lucide="message-circle" style="width: 18px; height: 18px;"></i>
                                        Motivation
                                    </label>
                                    <textarea class="form-control" id="editMotivation" name="motivation" rows="5" maxlength="500" placeholder="Tell us why you want to join...">@Model.ExistingRequest.Motivation</textarea>
                                    <div class="form-text">
                                        <span id="editCharCount">@(Model.ExistingRequest.Motivation?.Length ?? 0)</span>/500 characters
                                    </div>
                                </div>

                                <!-- CV Upload -->
                                <div class="mb-4">
                                    <label for="editCvUpload" class="form-label fw-semibold">
                                        <i data-lucide="file-text" style="width: 18px; height: 18px;"></i>
                                        Upload New CV
                                    </label>
                                    @if (!string.IsNullOrEmpty(Model.ExistingRequest.CvUrl))
                                    {
                                        <div class="alert alert-info mb-2 small d-flex align-items-center justify-content-between" style="background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%); border: none; border-radius: 10px;">
                                            <div>
                                                <i data-lucide="info" style="width: 16px; height: 16px; color: #0284c7;"></i>
                                                <span class="ms-2" style="color: #0c4a6e;">Current CV uploaded</span>
                                            </div>
                                            <button type="button" class="btn btn-sm view-cv-btn" data-cv-url="@Model.ExistingRequest.CvUrl" data-cv-title="My CV - @Model.ClubName" style="padding: 0.4rem 1rem !important;">
                                                <i data-lucide="eye" style="width: 14px; height: 14px;"></i>
                                                View
                                            </button>
                                        </div>
                                    }
                                    <input class="form-control" type="file" id="editCvUpload" accept=".pdf">
                                    <div class="form-text small">PDF only (Max 5MB). Leave empty to keep current.</div>
                                    <div id="editCvPreview" class="mt-2"></div>
                                </div>

                                <!-- Buttons -->
                                <div class="d-grid gap-2 mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg" id="editSubmitBtn">
                                        <i data-lucide="save" style="width: 20px; height: 20px;"></i>
                                        Save Changes
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">
                                        <i data-lucide="x" style="width: 16px; height: 16px;"></i>
                                        Cancel
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                }

                <div class="text-center mt-4">
                    <a href="/Clubs/Details/@Model.ClubId" class="btn btn-primary">Back to Club</a>
                </div>
            }
            else if (!Model.CanApply)
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4 text-center">
                        <div class="mb-4">
                            <i data-lucide="door-closed" style="width: 64px; height: 64px; color: #f59e0b;"></i>
                        </div>
                        <h4 class="text-warning mb-3">Cannot Apply at This Time</h4>
                        
                        @if (!Model.IsRecruitmentOpen)
                        {
                            <div class="alert alert-warning">
                                <i data-lucide="info" style="width: 18px; height: 18px;"></i>
                                <strong>Recruitment is currently closed.</strong><br/>
                                This club is not accepting new members at the moment. Please check back later or contact the club managers for more information.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i data-lucide="info" style="width: 18px; height: 18px;"></i>
                                You may not be eligible to apply to this club. This could be because:<br/>
                                <ul class="text-start mt-2 mb-0">
                                    <li>You are already a member of this club</li>
                                    <li>You have reached the maximum number of club memberships</li>
                                    <li>Your account is not verified</li>
                                </ul>
                            </div>
                        }
                        
                        <div class="d-flex gap-2 justify-content-center">
                            <a href="/Clubs/Details/@Model.ClubId" class="btn btn-secondary">
                                <i data-lucide="arrow-left" style="width: 16px; height: 16px;"></i>
                                Back to Club
                            </a>
                            <a href="/Clubs/Index" class="btn btn-primary">
                                <i data-lucide="search" style="width: 16px; height: 16px;"></i>
                                Browse Other Clubs
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Application Form -->
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <form id="applyForm" method="post">
                            <!-- Department Selection -->
                            <div class="mb-4">
                                <label for="departmentSelect" class="form-label fw-semibold">
                                    <i data-lucide="briefcase" style="width: 18px; height: 18px;"></i>
                                    Choose Department (Optional)
                                </label>
                                <select class="form-select" id="departmentSelect" name="departmentId">
                                    <option value="">-- No specific department --</option>
                                    @foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept.Id">
                                            @dept.Name
                                            @if (dept.MemberCount > 0)
                                            {
                                                <text>(@dept.MemberCount members)</text>
                                            }
                                        </option>
                                    }
                                </select>
                                <div class="form-text">Select the department you're interested in joining</div>
                            </div>

                            <!-- Motivation -->
                            <div class="mb-4">
                                <label for="motivation" class="form-label fw-semibold">
                                    <i data-lucide="message-circle" style="width: 18px; height: 18px;"></i>
                                    Why do you want to join?
                                </label>
                                <textarea class="form-control" id="motivation" name="motivation" rows="5" maxlength="500" placeholder="Tell us about your interests, skills, and why you want to join this club..."></textarea>
                                <div class="form-text">
                                    <span id="charCount">0</span>/500 characters
                                </div>
                            </div>

                            <!-- CV Upload -->
                            <div class="mb-4">
                                <label for="cvUpload" class="form-label fw-semibold">
                                    <i data-lucide="file-text" style="width: 18px; height: 18px;"></i>
                                    Upload CV (Optional)
                                </label>
                                <input class="form-control" type="file" id="cvUpload" accept=".pdf">
                                <div class="form-text">Accepted format: PDF only (Max 5MB)</div>
                                <div id="cvPreview" class="mt-2"></div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                    <i data-lucide="send" style="width: 20px; height: 20px;"></i>
                                    Submit Application
                                </button>
                                <a href="/Clubs/Details/@Model.ClubId" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Info Box -->
                <div class="alert alert-info mt-4">
                    <h6 class="alert-heading">
                        <i data-lucide="info" style="width: 18px; height: 18px;"></i>
                        What happens next?
                    </h6>
                    <ul class="mb-0 small">
                        <li>Your application will be reviewed by the club managers</li>
                        <li>You'll be notified once a decision is made</li>
                        <li>You can check your application status in your profile</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- Leaflet CSS and JS for Map -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <script>
        // Safe wrapper for lucide.createIcons()
        window.safeCreateIcons = function() {
            try {
                if (typeof lucide !== 'undefined' && lucide.createIcons) {
                    lucide.createIcons();
                }
            } catch (error) {
                console.warn('Lucide icons initialization failed:', error);
            }
        }

        // Toggle sidebar visibility
        window.toggleSidebar = function() {
            const sidebar = document.getElementById('cvSidebar');
            const mainContent = document.getElementById('mainContent');
            const showBtn = document.getElementById('showSidebarBtn');
            
            if (sidebar.classList.contains('d-none')) {
                // Show sidebar
                sidebar.classList.remove('d-none');
                mainContent.classList.remove('col-lg-12');
                mainContent.classList.add('col-lg-8');
                showBtn.classList.add('d-none');
            } else {
                // Hide sidebar
                sidebar.classList.add('d-none');
                mainContent.classList.remove('col-lg-8');
                mainContent.classList.add('col-lg-12');
                showBtn.classList.remove('d-none');
            }
        }

        // Wait for lucide to be available
        function initializeApplyPage() {
            if (typeof lucide !== 'undefined' && lucide.createIcons) {
                try {
                    lucide.createIcons();
                } catch (error) {
                    console.warn('Initial lucide icons failed:', error);
                }
                initializeFormHandlers();
            } else {
                setTimeout(initializeApplyPage, 50);
            }
        }

        function initializeFormHandlers() {
            // All form initialization code will go here

        const form = document.getElementById('applyForm');
        const motivationInput = document.getElementById('motivation');
        const charCount = document.getElementById('charCount');
        const cvUpload = document.getElementById('cvUpload');
        const cvPreview = document.getElementById('cvPreview');
        const submitBtn = document.getElementById('submitBtn');

        // Edit form elements
        const editForm = document.getElementById('editForm');
        const editMotivationInput = document.getElementById('editMotivation');
        const editCharCount = document.getElementById('editCharCount');
        const editCvUpload = document.getElementById('editCvUpload');
        const editCvPreview = document.getElementById('editCvPreview');
        const editSubmitBtn = document.getElementById('editSubmitBtn');

        let uploadedCvUrl = null;
        let editUploadedCvUrl = '@Model.ExistingRequest?.CvUrl';

        // Character counter
        if (motivationInput) {
            motivationInput.addEventListener('input', () => {
                charCount.textContent = motivationInput.value.length;
            });
        }

        // Edit form character counter
        if (editMotivationInput) {
            editMotivationInput.addEventListener('input', () => {
                editCharCount.textContent = editMotivationInput.value.length;
            });
        }

        // CV preview
        if (cvUpload) {
            cvUpload.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) {
                    // Validate file size (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB');
                        cvUpload.value = '';
                        return;
                    }

                    cvPreview.innerHTML = `
                        <div class="alert alert-secondary d-flex align-items-center">
                            <i data-lucide="file" style="width: 20px; height: 20px; margin-right: 8px;"></i>
                            <div class="flex-grow-1">
                                <strong>${file.name}</strong>
                                <small class="text-muted d-block">${(file.size / 1024).toFixed(2)} KB</small>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="clearCV()">Remove</button>
                        </div>
                    `;
                    safeCreateIcons();
                }
            });
        }

        window.clearCV = function() {
            cvUpload.value = '';
            cvPreview.innerHTML = '';
            uploadedCvUrl = null;
        };

        // Edit CV preview
        if (editCvUpload) {
            editCvUpload.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) {
                    // Validate file size (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('File size must be less than 5MB');
                        editCvUpload.value = '';
                        return;
                    }

                    editCvPreview.innerHTML = `
                        <div class="alert alert-secondary d-flex align-items-center">
                            <i data-lucide="file" style="width: 20px; height: 20px; margin-right: 8px;"></i>
                            <div class="flex-grow-1">
                                <strong>${file.name}</strong>
                                <small class="text-muted d-block">${(file.size / 1024).toFixed(2)} KB</small>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="clearEditCV()">Remove</button>
                        </div>
                    `;
                    safeCreateIcons();
                }
            });
        }

        window.clearEditCV = function() {
            editCvUpload.value = '';
            editCvPreview.innerHTML = '';
        };

        // Form submission
        if (form) {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Submitting...';

                try {
                    console.log('Starting application submission...');
                    
                    // Upload CV first if selected
                    const cvFile = cvUpload.files[0];
                    if (cvFile) {
                        console.log('Uploading CV:', cvFile.name);
                        uploadedCvUrl = await uploadCV(cvFile);
                        console.log('CV uploaded successfully:', uploadedCvUrl);
                    }

                    // Submit application
                    const departmentValue = document.getElementById('departmentSelect').value;
                    const formData = {
                        clubId: @Model.ClubId,
                        departmentId: departmentValue ? parseInt(departmentValue) : null,
                        motivation: motivationInput.value || null,
                        cvUrl: uploadedCvUrl
                    };

                    console.log('Submitting application with data:', formData);

                    const response = await fetch('https://localhost:5001/api/joinrequest', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        credentials: 'include',
                        body: JSON.stringify(formData)
                    });

                    console.log('Response status:', response.status);
                    console.log('Response ok:', response.ok);

                    if (response.ok) {
                        const result = await response.json();
                        console.log('Application submitted successfully:', result);
                        
                        // Show success notification
                        if (typeof success === 'function') {
                            success('Application Submitted!', 'Your application has been submitted successfully. You will be notified once it\'s reviewed.', 3000);
                        }
                        
                        // Store notification for redirect
                        sessionStorage.setItem('applicationSubmitted', JSON.stringify({
                            title: 'Application Submitted Successfully',
                            message: 'Your application is now being reviewed by club managers.',
                            clubName: '@Model.ClubName'
                        }));
                        
                        // Redirect to Details page after a short delay
                        setTimeout(() => {
                            window.location.href = '/Clubs/Details/@Model.ClubId';
                        }, 1500);
                    } else {
                        // Try to get error message
                        let errorMessage = 'Failed to submit application';
                        try {
                            const errorData = await response.json();
                            console.error('Error response:', errorData);
                            errorMessage = errorData.message || errorMessage;
                        } catch (e) {
                            const errorText = await response.text();
                            console.error('Error response (text):', errorText);
                            errorMessage = errorText || errorMessage;
                        }
                        
                        // Show error notification
                        if (typeof error === 'function') {
                            error('Application Failed', errorMessage, 5000);
                        } else {
                            alert('❌ Error: ' + errorMessage);
                        }
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i data-lucide="send" style="width: 20px; height: 20px;"></i> Submit Application';
                        
                        // Re-initialize lucide icons
                        safeCreateIcons();
                    }
                } catch (err) {
                    console.error('Exception during submission:', err);
                    console.error('Error stack:', err.stack);
                    
                    // Show error notification
                    if (typeof error === 'function') {
                        error('Error Occurred', 'An error occurred while submitting your application. Please try again.', 5000);
                    } else {
                        alert('❌ An error occurred: ' + err.message + '\n\nPlease check the console for details and try again.');
                    }
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i data-lucide="send" style="width: 20px; height: 20px;"></i> Submit Application';
                    
                    // Re-initialize lucide icons
                    safeCreateIcons();
                }
            });
        }

        async function uploadCV(file) {
            try {
                const formData = new FormData();
                formData.append('file', file);

                const response = await fetch('https://localhost:5001/api/fileupload/cv', {
                    method: 'POST',
                    credentials: 'include',
                    body: formData
                });

                if (!response.ok) {
                    throw new Error('Failed to upload CV');
                }

                const result = await response.json();
                console.log('CV uploaded successfully:', result.url);
                return result.url; // Returns /uploads/cv/xxx.pdf
            } catch (error) {
                console.error('Error uploading CV:', error);
                throw error;
            }
        }

        // Edit form submission
        const existingRequestId = @(Model.ExistingRequest?.Id ?? 0);
        
        if (editForm && existingRequestId > 0) {
            editForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                editSubmitBtn.disabled = true;
                editSubmitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Saving...';

                try {
                    console.log('Starting application update...');
                    
                    // Upload new CV if selected
                    const cvFile = editCvUpload.files[0];
                    if (cvFile) {
                        console.log('Uploading new CV:', cvFile.name);
