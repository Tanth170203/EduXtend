            @:                <p class="border p-3 rounded bg-light">${interview.notes}</p>
            @:            </div>
            @:        `;
            @:    }
            @:    
            @:    if (hasEvaluation) {
            @:        html += `
            @:            <div class="col-12">
            @:                <label class="form-label text-muted small">Interview Evaluation</label>
            @:                <p class="border p-3 rounded bg-light">${interview.evaluation}</p>
            @:            </div>
            @:        `;
            @:    }
            @:    
            @:    html += `
            @:                    <div class="col-12">
            @:                        <span class="badge bg-${statusClass}">${status}</span>
            @:                    </div>
            @:                </div>
            @:            </div>
            @:        </div>
            @:    `;
            @:    
            @:    document.getElementById('interviewSection').innerHTML = html;
            @:    safeCreateIcons();
            @:}
        }

        // Initialize page when DOM and lucide are ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeApplyPage);
        } else {
            initializeApplyPage();
        }

        @if (Model.ExistingRequest != null && Model.ExistingRequest.Id > 0)
        {
            @:// Also load interview info when ready
            @:if (document.readyState === 'loading') {
            @:    document.addEventListener('DOMContentLoaded', loadInterviewInfo);
            @:} else {
            @:    setTimeout(loadInterviewInfo, 100);
            @:}
        }
    </script>
}

