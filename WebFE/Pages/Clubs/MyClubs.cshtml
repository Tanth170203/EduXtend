@page
@model WebFE.Pages.Clubs.MyClubsModel
@{
    ViewData["Title"] = "My Clubs";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">My Clubs</h1>
        <p class="text-muted">Clubs you are currently a member of</p>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.MyClubs.Any())
    {
        <div class="text-center py-5">
            <i data-lucide="inbox" style="width: 80px; height: 80px; color: #ccc;"></i>
            <h3 class="mt-3 text-muted">You're not a member of any clubs yet</h3>
            <p class="text-muted">Browse active clubs and apply to join one!</p>
            <a asp-page="/Clubs/Active" class="btn btn-primary btn-lg mt-3">
                <i data-lucide="search" style="width: 20px; height: 20px;"></i> Browse Clubs
            </a>
        </div>
    }
    else
    {
        <div class="mb-3">
            <p class="text-muted">
                <i data-lucide="check-circle-2" style="width: 18px; height: 18px; color: var(--bs-success);"></i> 
                You are a member of <strong>@Model.MyClubs.Count</strong> club@(Model.MyClubs.Count > 1 ? "s" : "")
            </p>
        </div>

        <!-- Club cards -->
        <div class="row g-4">
            @foreach (var c in Model.MyClubs)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100 border-0 position-relative">
                        <!-- Member Badge -->
                        <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                            <span class="badge bg-success px-3 py-2" style="font-size: 0.85rem;">
                                <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i> Member
                            </span>
                        </div>

                        <img src="@(string.IsNullOrEmpty(c.LogoUrl) ? "/img/club-placeholder.png" : c.LogoUrl)"
                             class="card-img-top" style="height:200px; object-fit:cover;" alt="@c.Name logo" />

                        <div class="card-body">
                            <h5 class="fw-bold">@c.Name</h5>
                            @if (!string.IsNullOrWhiteSpace(c.SubName))
                            {
                                <p class="text-muted small mb-2">@c.SubName</p>
                            }
                            
                            @if (!string.IsNullOrWhiteSpace(c.Description))
                            {
                                <p class="text-muted small" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                    @c.Description
                                </p>
                            }

                            <div class="d-flex flex-wrap gap-3 small text-muted mt-3">
                                <span><i data-lucide="users" style="width: 14px; height: 14px;"></i> @c.MemberCount members</span>
                                <span><i data-lucide="calendar" style="width: 14px; height: 14px;"></i> @c.ActivityCount activities</span>
                            </div>
                            
                            @if (!string.IsNullOrWhiteSpace(c.CategoryName))
                            {
                                <div class="mt-2">
                                    <span class="badge bg-light text-dark border">
                                        <i data-lucide="tag" style="width: 12px; height: 12px;"></i> @c.CategoryName
                                    </span>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-transparent border-0">
                            <div class="d-flex gap-2">
                                @if (c.IsManager)
                                {
                                    <a href="/ClubManager" class="btn btn-warning flex-grow-1">
                                        <i data-lucide="settings" style="width: 14px; height: 14px;"></i> Manager
                                    </a>
                                }
                                <a asp-page="/Clubs/MemberDashboard" asp-route-id="@c.Id" class="btn btn-primary flex-grow-1">
                                    <i data-lucide="info" style="width: 14px; height: 14px;"></i> Details
                                </a>
                            </div>
                            
                            <div class="mt-2 d-flex justify-content-between align-items-center">
                                @if (!c.IsActive)
                                {
                                    <span class="badge bg-warning text-dark">Inactive</span>
                                }
                                else if (c.IsRecruitmentOpen)
                                {
                                    <span class="badge bg-info text-dark px-2 py-1" style="font-size: 0.7rem;">
                                        <i data-lucide="door-open" style="width: 12px; height: 12px;"></i> Recruiting
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

@section Scripts {
    <script>
        // Initialize Lucide icons
        function initLucide() {
            if (typeof lucide !== 'undefined' && lucide.createIcons) {
                try {
                    lucide.createIcons();
                    console.log('Lucide icons created successfully');
                } catch (e) {
                    console.error('Error creating Lucide icons:', e);
                }
            } else {
                console.log('Lucide not ready, retrying...');
                setTimeout(initLucide, 50);
            }
        }

        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize icons when DOM is ready
            initLucide();
            setTimeout(initLucide, 300);
            setTimeout(initLucide, 1000);
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
}

