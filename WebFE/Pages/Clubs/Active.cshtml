@page
@model WebFE.Pages.Clubs.ActiveModel
@{
    ViewData["Title"] = "Active Clubs";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/js/pagination.js"></script>
}


<section class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Student Clubs</h1>
        <p class="text-muted">Join clubs that match your interests, meet like-minded students, and create lasting memories.</p>
    </div>

    <!-- Search + Filters -->
    <form method="get" id="filterForm" class="d-flex flex-wrap align-items-center gap-2 mb-4">
        <input type="text" 
               name="searchTerm" 
               value="@Model.SearchTerm" 
               class="form-control flex-grow-1" 
               placeholder="Search clubs by name or description..." 
               style="max-width:400px;">
        
        <select name="categoryName" class="form-select" style="max-width:180px;">
            <option value="">All Categories</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category" selected="@(Model.CategoryName == category)">@category</option>
            }
        </select>
        
        <select name="sortBy" class="form-select" style="max-width:180px;">
            <option value="az" selected="@(Model.SortBy == "az" || string.IsNullOrEmpty(Model.SortBy))">A–Z</option>
            <option value="members" selected="@(Model.SortBy == "members")">Most Members</option>
            <option value="newest" selected="@(Model.SortBy == "newest")">Newest</option>
        </select>
        
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Search
        </button>
        
        @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.CategoryName))
        {
            <a href="/Clubs/Active" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Clear
            </a>
        }
    </form>

    <!-- Results Summary -->
    <div class="mb-3">
        <h5 class="text-muted">
            <i class="bi bi-people-fill"></i> Found <strong>@Model.TotalCount</strong> 
            club@(Model.TotalCount != 1 ? "s" : "")
            @if (Model.TotalPages > 1)
            {
                <span class="small">- Page @Model.CurrentPage of @Model.TotalPages</span>
            }
        </h5>
    </div>

    <!-- Club cards -->
    <div class="row g-4">
        @foreach (var c in Model.Clubs)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 border-0">
                    <img src="@(string.IsNullOrEmpty(c.LogoUrl) ? "/img/club-placeholder.png" : c.LogoUrl)"
                         class="card-img-top" style="height:200px; object-fit:cover;" />

                    <div class="card-body">
                        <h5 class="fw-bold">@c.Name</h5>
                        @if (!string.IsNullOrWhiteSpace(c.SubName))
                        {
                            <p class="text-muted small">@c.SubName</p>
                        }

                        <div class="d-flex flex-wrap gap-3 small text-muted mt-2">
                            <span><i class="bi bi-people"></i> @c.MemberCount members</span>
                            <span><i class="bi bi-calendar-event"></i> @c.ActivityCount activities</span>
                            <span><i class="bi bi-calendar"></i> Founded @c.FoundedDate.Year</span>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="d-flex gap-2">
                                <a asp-page="Details" asp-route-id="@c.Id" class="btn btn-outline-primary rounded-pill px-3">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                @if (c.IsRecruitmentOpen && !c.IsMember)
                                {
                                    <a asp-page="Apply" asp-route-clubId="@c.Id" class="btn btn-success rounded-pill px-3">
                                        <i class="bi bi-send"></i> Apply Now
                                    </a>
                                }
                                @if (c.IsMember)
                                {
                                    <span class="badge bg-info text-white rounded-pill px-3 py-2">
                                        <i class="bi bi-check-circle"></i> Member
                                    </span>
                                }
                            </div>
                            
                            <div class="d-flex gap-2 align-items-center">
                                @if (!c.IsActive)
                                {
                                    <span class="badge bg-warning text-dark">Inactive</span>
                                }
                                @if (c.IsRecruitmentOpen)
                                {
                                    <span class="badge bg-success px-2 py-1" style="font-size: 0.75rem;">
                                        <i class="bi bi-door-open"></i> OPEN
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-2 py-1" style="font-size: 0.75rem;">
                                        <i class="bi bi-door-closed"></i> CLOSED
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Club pagination" class="mt-5">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" 
                       href="javascript:void(0)"
                       onclick="goToPage(@(Model.CurrentPage - 1))"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                    
                    // Show first page
                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="javascript:void(0)" onclick="goToPage(1)">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }
                    
                    // Show page numbers
                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="javascript:void(0)" onclick="goToPage(@i)">@i</a>
                        </li>
                    }
                    
                    // Show last page
                    if (endPage < Model.TotalPages)
                    {
                        if (endPage < Model.TotalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="javascript:void(0)" onclick="goToPage(@Model.TotalPages)">@Model.TotalPages</a>
                        </li>
                    }
                }

                <!-- Next Button -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" 
                       href="javascript:void(0)"
                       onclick="goToPage(@(Model.CurrentPage + 1))"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }

</section>

<style>
    /* Card Styling */
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }
    
    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12) !important;
    }
    
    .card-img-top {
        border-radius: 12px 12px 0 0;
    }
    
    /* Pagination Styling */
    .pagination {
        gap: 0.5rem;
    }
    
    .page-link {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        color: #495057;
        padding: 0.5rem 0.75rem;
        transition: all 0.2s ease;
    }
    
    .page-link:hover {
        background-color: #e9ecef;
        border-color: #dee2e6;
        color: #0d6efd;
    }
    
    .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
        font-weight: 600;
    }
    
    .page-item.disabled .page-link {
        background-color: #f8f9fa;
        border-color: #dee2e6;
        color: #6c757d;
    }
</style>
