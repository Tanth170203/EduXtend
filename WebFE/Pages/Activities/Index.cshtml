@page
@model WebFE.Pages.Activities.IndexModel
@{
    ViewData["Title"] = "Activities";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/js/pagination.js"></script>
}

<section class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Activities & Events</h1>
        <p class="text-muted">Join activities to gain experience and earn training points</p>
    </div>

    <!-- Search + Filters -->
    <form method="get" class="card shadow-sm border-0 mb-4 p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <input type="text"
                       name="searchTerm"
                       value="@Model.SearchTerm"
                       class="form-control"
                       placeholder="Search by title, description, location...">
            </div>

            <div class="col-md-3">
                <select name="type" class="form-select">
                    <option value="">All Types</option>
                    <optgroup label="Club Activities">
                        <option value="ClubMeeting" selected="@(Model.Type == "ClubMeeting")">Club Meeting</option>
                        <option value="ClubTraining" selected="@(Model.Type == "ClubTraining")">Club Training</option>
                        <option value="ClubWorkshop" selected="@(Model.Type == "ClubWorkshop")">Club Workshop</option>
                    </optgroup>
                    <optgroup label="Events">
                        <option value="LargeEvent" selected="@(Model.Type == "LargeEvent")">Large Event</option>
                        <option value="MediumEvent" selected="@(Model.Type == "MediumEvent")">Medium Event</option>
                        <option value="SmallEvent" selected="@(Model.Type == "SmallEvent")">Small Event</option>
                    </optgroup>
                    <optgroup label="Competitions">
                        <option value="SchoolCompetition" selected="@(Model.Type == "SchoolCompetition")">School Competition</option>
                        <option value="ProvincialCompetition" selected="@(Model.Type == "ProvincialCompetition")">Provincial Competition</option>
                        <option value="NationalCompetition" selected="@(Model.Type == "NationalCompetition")">National Competition</option>
                    </optgroup>
                    <optgroup label="Collaboration">
                        <option value="ClubCollaboration" selected="@(Model.Type == "ClubCollaboration")">Club Collaboration</option>
                        <option value="SchoolCollaboration" selected="@(Model.Type == "SchoolCollaboration")">School Collaboration</option>
                    </optgroup>
                </select>
            </div>

            <div class="col-md-3">
                <select name="status" class="form-select">
                    <option value="" selected="@(string.IsNullOrEmpty(Model.Status))">All Status</option>
                    <option value="approved" selected="@(Model.Status == "approved")">Approved</option>
                    <option value="completed" selected="@(Model.Status == "completed")">Completed</option>
                </select>
            </div>
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>

            @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.Type) || 
                 !string.IsNullOrEmpty(Model.Status))
            {
                <a href="/Activities" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </a>
            }
        </div>
    </form>

    <!-- Results Summary -->
    <div class="mb-3">
        <h5 class="text-muted">
            <i class="bi bi-calendar-event"></i> Found <strong>@Model.TotalCount</strong> 
            activit@(Model.TotalCount != 1 ? "ies" : "y")
            @if (Model.TotalPages > 1)
            {
                <span class="small">- Page @Model.CurrentPage of @Model.TotalPages</span>
            }
        </h5>
    </div>

    <!-- Activity Cards -->
    <div class="row g-4">
        @if (Model.Activities.Any())
        {
            foreach (var activity in Model.Activities)
            {
                var statusBadgeClass = activity.Status switch
                {
                    "Approved" => "bg-success",
                    "PendingApproval" => "bg-warning text-dark",
                    "Completed" => "bg-secondary",
                    "Rejected" => "bg-danger",
                    _ => "bg-secondary"
                };

                // Convert to local time for comparison (assume DB stores local time)
                var now = DateTime.Now;
                var isEnded = activity.EndTime < now;  // Activity has fully ended
                var isOngoing = activity.StartTime <= now && now <= activity.EndTime;  // Currently happening
                var isUpcoming = now < activity.StartTime && activity.Status == "Approved";  // Not started yet

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 @(isEnded ? "opacity-75" : "")" style="overflow: hidden;">
                        <!-- Activity Image -->
                        @if (!string.IsNullOrWhiteSpace(activity.ImageUrl))
                        {
                            <img src="@activity.ImageUrl" 
                                 class="card-img-top" 
                                 style="height: 200px; object-fit: cover; width: 100%;"
                                 alt="@activity.Title"
                                 onerror="this.style.display='none'">
                        }
                        else
                        {
                            <div class="card-img-top bg-gradient-primary d-flex align-items-center justify-content-center" 
                                 style="height: 200px; width: 100%;">
                                <i class="bi bi-calendar-event text-white" style="font-size: 3rem;"></i>
                            </div>
                        }
                        
                        <!-- Activity Content -->
                        <div class="card-body d-flex flex-column" style="padding: 1.25rem;">
                            <!-- Status Badges -->
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                <span class="badge @statusBadgeClass">@activity.Status</span>
                                <span class="badge bg-info">@activity.Type</span>
                                @if (!activity.IsPublic)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-lock"></i> Club Only
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">
                                        <i class="bi bi-globe"></i> Public
                                    </span>
                                }
                                @if (activity.ClubCollaborationId.HasValue)
                                {
                                    <span class="badge bg-gradient-collaboration">
                                        <i class="bi bi-diagram-3"></i> Collaboration
                                    </span>
                                }
                            </div>

                            <!-- Title -->
                            <h5 class="card-title fw-bold mb-2" style="min-height: 3rem; line-height: 1.5rem;">
                                @activity.Title
                            </h5>
                            
                            <!-- Club Info -->
                            @if (!string.IsNullOrWhiteSpace(activity.ClubName))
                            {
                                <p class="text-muted small mb-1">
                                    <i class="bi bi-people"></i> @activity.ClubName
                                </p>
                            }
                            
                            @if (activity.ClubCollaborationId.HasValue && !string.IsNullOrWhiteSpace(activity.CollaboratingClubName))
                            {
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-diagram-3"></i> with <strong>@activity.CollaboratingClubName</strong>
                                </p>
                            }

                            <!-- Description -->
                            @if (!string.IsNullOrWhiteSpace(activity.Description))
                            {
                                <p class="text-muted small mb-3" style="height: 3rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                    @activity.Description
                                </p>
                            }
                            else
                            {
                                <div style="height: 3rem;"></div>
                            }

                            <!-- Activity Details -->
                            <div class="d-flex flex-column gap-2 small text-muted mb-3">
                                <div>
                                    <i class="bi bi-calendar3"></i>
                                    @activity.StartTime.ToString("ddd, MMM dd, yyyy")
                                </div>
                                <div>
                                    <i class="bi bi-clock"></i>
                                    @activity.StartTime.ToString("HH:mm") - @activity.EndTime.ToString("HH:mm")
                                </div>
                                @if (!string.IsNullOrWhiteSpace(activity.Location))
                                {
                                    <div style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        <i class="bi bi-geo-alt"></i>
                                        @activity.Location
                                    </div>
                                }
                            </div>

                            <!-- Points -->
                            <div class="d-flex flex-column gap-1 mb-3">
                                <div class="text-success fw-bold small">
                                    <i class="bi bi-award"></i>
                                    +@activity.MovementPoint points
                                </div>
                                @if (activity.CollaborationPoint.HasValue)
                                {
                                    <div class="text-info fw-bold small">
                                        <i class="bi bi-star"></i>
                                        +@activity.CollaborationPoint collaboration points
                                    </div>
                                }
                            </div>

                            <!-- Footer - Push to bottom -->
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-person-check"></i> 
                                        @activity.CurrentParticipants@(activity.MaxParticipants.HasValue ? $"/{activity.MaxParticipants}" : "") registered
                                    </small>
                                    @if (activity.IsFull)
                                    {
                                        <span class="badge bg-danger">Full</span>
                                    }
                                </div>

                                <div class="d-grid">
                                    <a asp-page="Details" asp-route-id="@activity.Id" 
                                       class="btn btn-primary">
                                        <i class="bi bi-info-circle"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-info-circle fs-3 d-block mb-2"></i>
                    <h5>No activities found</h5>
                    <p class="mb-0">Try adjusting your search filters or check back later for new activities.</p>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Activity pagination" class="mt-5">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" 
                       href="javascript:void(0)"
                       onclick="goToPage(@(Model.CurrentPage - 1))"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                    
                    // Show first page
                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="javascript:void(0)" onclick="goToPage(1)">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }
                    
                    // Show page numbers
                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="javascript:void(0)" onclick="goToPage(@i)">@i</a>
                        </li>
                    }
                    
                    // Show last page
                    if (endPage < Model.TotalPages)
                    {
                        if (endPage < Model.TotalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="javascript:void(0)" onclick="goToPage(@Model.TotalPages)">@Model.TotalPages</a>
                        </li>
                    }
                }

                <!-- Next Button -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" 
                       href="javascript:void(0)"
                       onclick="goToPage(@(Model.CurrentPage + 1))"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }

</section>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .bg-gradient-collaboration {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
    }
    
    /* Activity Card Styling */
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }
    
    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12) !important;
    }
    
    .card-img-top {
        border-radius: 12px 12px 0 0;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.35rem 0.65rem;
        font-weight: 500;
    }
    
    .card-title {
        color: #1a1a1a;
        font-size: 1.1rem;
    }
    
    .btn-primary {
        border-radius: 8px;
        padding: 0.6rem 1rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }
    
    /* Pagination Styling */
    .pagination {
        gap: 0.5rem;
    }
    
    .page-link {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        color: #495057;
        padding: 0.5rem 0.75rem;
        transition: all 0.2s ease;
    }
    
    .page-link:hover {
        background-color: #e9ecef;
        border-color: #dee2e6;
        color: #0d6efd;
    }
    
    .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
        font-weight: 600;
    }
    
    .page-item.disabled .page-link {
        background-color: #f8f9fa;
        border-color: #dee2e6;
        color: #6c757d;
    }
</style>

