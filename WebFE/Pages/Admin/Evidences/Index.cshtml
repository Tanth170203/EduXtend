@page
@using BusinessObject.DTOs.Evidence
@model WebFE.Pages.Admin.Evidences.IndexModel
@{
    ViewData["Title"] = "Evidence Management";
    ViewData["Breadcrumb"] = "Evidences";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div>
            <h1 class="page-title">
                <i data-lucide="file-check" style="width: 28px; height: 28px; display: inline-block; vertical-align: middle; margin-right: 0.5rem;"></i>
                Evidence Management
            </h1>
            <p class="page-description">View and review student activity evidences</p>
        </div>
        <div>
            <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                <i data-lucide="clock" style="width: 16px; height: 16px;"></i>
                @Model.PendingCount pending
            </span>
        </div>
    </div>
</div>

<!-- Alert Messages -->
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i data-lucide="check-circle" style="width: 16px; height: 16px; display: inline-block; vertical-align: middle; margin-right: 0.5rem;"></i>
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i data-lucide="alert-circle" style="width: 16px; height: 16px; display: inline-block; vertical-align: middle; margin-right: 0.5rem;"></i>
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Total evidences</p>
                        <h3 class="mb-0 fw-bold">@Model.TotalEvidences</h3>
                        <small class="text-muted">All statuses</small>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i data-lucide="file-text" style="width: 32px; height: 32px; color: #0d6efd;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Pending</p>
                        <h3 class="mb-0 fw-bold text-warning">@Model.PendingCount</h3>
                        <small class="text-warning">Needs review</small>
                    </div>
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                        <i data-lucide="clock" style="width: 32px; height: 32px; color: #ffc107;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Approved</p>
                        <h3 class="mb-0 fw-bold text-success">@Model.ApprovedCount</h3>
                        <small class="text-success">Successful</small>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i data-lucide="check-circle" style="width: 32px; height: 32px; color: #198754;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Rejected</p>
                        <h3 class="mb-0 fw-bold text-danger">@Model.RejectedCount</h3>
                        <small class="text-danger">Not accepted</small>
                    </div>
                    <div class="rounded-circle bg-danger bg-opacity-10 p-3">
                        <i data-lucide="x-circle" style="width: 32px; height: 32px; color: #dc3545;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <ul class="nav nav-pills" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.CurrentFilter == "all" ? "active" : "")" href="?filter=all">
                        <i data-lucide="list" style="width: 16px; height: 16px;"></i>
                        All
                        <span class="badge bg-secondary ms-1">@Model.TotalEvidences</span>
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.CurrentFilter == "pending" ? "active" : "")" href="?filter=pending">
                        <i data-lucide="clock" style="width: 16px; height: 16px;"></i>
                        Pending
                        <span class="badge bg-warning ms-1">@Model.PendingCount</span>
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.CurrentFilter == "approved" ? "active" : "")" href="?filter=approved">
                        <i data-lucide="check-circle" style="width: 16px; height: 16px;"></i>
                        Approved
                        <span class="badge bg-success ms-1">@Model.ApprovedCount</span>
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.CurrentFilter == "rejected" ? "active" : "")" href="?filter=rejected">
                        <i data-lucide="x-circle" style="width: 16px; height: 16px;"></i>
                        Rejected
                        <span class="badge bg-danger ms-1">@Model.RejectedCount</span>
                    </a>
                </li>
            </ul>

            <div class="input-group" style="max-width: 300px;">
                <span class="input-group-text bg-white">
                    <i data-lucide="search" style="width: 16px; height: 16px;"></i>
                </span>
                <input type="text" class="form-control" id="searchInput" placeholder="Search student...">
            </div>
        </div>
    </div>
</div>

<!-- Evidence List -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-semibold">
            <i data-lucide="folder" style="width: 18px; height: 18px;"></i>
            Evidence List
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Evidences.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="evidenceTable">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4" style="width: 50px;">#</th>
                            <th>Student</th>
                            <th>Evidence title</th>
                            <th>Criterion</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Points</th>
                            <th class="text-center">Submitted</th>
                            <th class="text-center">File</th>
                            <th class="text-center pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var evidence in Model.Evidences)
                        {
                            <tr class="evidence-row">
                                <td class="ps-4 text-muted">@index</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            @(string.IsNullOrEmpty(evidence.StudentName) ? "?" : evidence.StudentName.Substring(0, 1).ToUpper())
                                        </div>
                                        <div>
                                            <div class="fw-bold">@evidence.StudentName</div>
                                            <small class="text-muted">@evidence.StudentCode</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <div class="fw-semibold text-truncate" style="max-width: 300px;" title="@evidence.Title">
                                            @evidence.Title
                                        </div>
                                        @if (!string.IsNullOrEmpty(evidence.Description))
                                        {
                                            <small class="text-muted text-truncate d-block" style="max-width: 300px;" title="@evidence.Description">
                                                @evidence.Description
                                            </small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(evidence.CriterionTitle))
                                    {
                                        <span class="badge bg-info">@evidence.CriterionTitle</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (evidence.Status == "Pending")
                                    {
                                        <span class="badge bg-warning px-3 py-2">
                                            <i data-lucide="clock" style="width: 12px; height: 12px;"></i>
                                            Pending
                                        </span>
                                    }
                                    else if (evidence.Status == "Approved")
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i data-lucide="check-circle" style="width: 12px; height: 12px;"></i>
                                            Approved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">
                                            <i data-lucide="x-circle" style="width: 12px; height: 12px;"></i>
                                            Rejected
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (evidence.Status == "Approved")
                                    {
                                        <strong class="text-success fs-5">+@evidence.Points</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <small class="text-muted">
                                        @evidence.SubmittedAt.ToString("dd/MM/yyyy")
                                        <br />
                                        @evidence.SubmittedAt.ToString("HH:mm")
                                    </small>
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(evidence.FilePath))
                                    {
                                        <a href="@evidence.FilePath" target="_blank" class="btn btn-sm btn-outline-secondary">
                                            <i data-lucide="external-link" style="width: 12px; height: 12px;"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center pe-4">
                                    @if (evidence.Status == "Pending")
                                    {
                                        <a href="/Admin/Evidences/Review?id=@evidence.Id"
                                           class="btn btn-sm btn-primary"
                                           title="Review evidence">
                                            <i data-lucide="check-square" style="width: 14px; height: 14px;"></i>
                                            Review
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-info"
                                                data-bs-toggle="modal"
                                                data-bs-target="#viewModal"
                                                data-evidence-id="@evidence.Id"
                                                data-evidence-title="@evidence.Title"
                                                data-student-name="@evidence.StudentName"
                                                data-status="@evidence.Status"
                                                data-points="@evidence.Points"
                                                data-reviewer-name="@evidence.ReviewerName"
                                                data-reviewer-comment="@evidence.ReviewerComment"
                                                data-reviewed-at="@evidence.ReviewedAt?.ToString("dd/MM/yyyy HH:mm")"
                                                data-file-path="@evidence.FilePath">
                                            <i data-lucide="eye" style="width: 14px; height: 14px;"></i>
                                            View
                                        </button>
                                    }
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i data-lucide="inbox" style="width: 64px; height: 64px; color: #9ca3af;"></i>
                <p class="text-muted mt-3 mb-0">No evidences found</p>
                <p class="text-muted">
                    @(Model.CurrentFilter == "pending" ? "No pending evidences" : "The system has no data yet")
                </p>
            </div>
        }
    </div>
</div>

<!-- View Modal (for already reviewed evidences) -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewModalLabel">
                    <i data-lucide="eye" style="width: 20px; height: 20px;"></i>
                    Evidence details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-3">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3 text-muted">General information</h6>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <strong>Student:</strong>
                                <p id="viewStudentName"></p>
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Title:</strong>
                                <p id="viewEvidenceTitle"></p>
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Status:</strong>
                                <p id="viewStatus"></p>
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Points:</strong>
                                <p id="viewPoints"></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3 text-muted">Review information</h6>
                        <div class="mb-2">
                            <strong>Reviewer:</strong>
                            <p id="viewReviewerName"></p>
                        </div>
                        <div class="mb-2">
                            <strong>Reviewed at:</strong>
                            <p id="viewReviewedAt"></p>
                        </div>
                        <div class="mb-2">
                            <strong>Comment:</strong>
                            <p id="viewReviewerComment"></p>
                        </div>
                    </div>
                </div>

                <div id="viewFilePathContainer" style="display: none;">
                    <a href="#" id="viewFilePathLink" target="_blank" class="btn btn-primary mt-3">
                        <i data-lucide="external-link" style="width: 14px; height: 14px;"></i>
                        View attached file (new tab)
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 16px;
    }

    .evidence-row:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .nav-pills .nav-link {
        border-radius: 8px;
        font-weight: 500;
    }

        .nav-pills .nav-link.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

    .card {
        transition: all 0.3s ease;
    }

    .table > :not(caption) > * > * {
        padding: 1rem 0.75rem;
    }
</style>

@section Scripts {
    <script>
        function safeCreateLucideIcons() {
            try {
                if (typeof lucide !== 'undefined' && typeof lucide.createIcons === 'function') {
                    // Some builds require an explicit icons bag; fall back to empty object
                    lucide.createIcons(lucide.icons || {});
                }
            } catch (e) {
                console.warn('Lucide initialization failed:', e);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            safeCreateLucideIcons();

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#evidenceTable tbody tr');

                    rows.forEach(row => {
                        const studentName = row.cells[1].textContent.toLowerCase();
                        const evidenceTitle = row.cells[2].textContent.toLowerCase();

                        if (studentName.includes(searchTerm) || evidenceTitle.includes(searchTerm)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }


            // Handle view modal
            var viewModal = document.getElementById('viewModal');
            if (viewModal) {
                viewModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;

                    document.getElementById('viewStudentName').textContent = button.getAttribute('data-student-name');
                    document.getElementById('viewEvidenceTitle').textContent = button.getAttribute('data-evidence-title');
                    document.getElementById('viewStatus').innerHTML = '<span class="badge bg-' +
                        (button.getAttribute('data-status') === 'Approved' ? 'success' : 'danger') + '">' +
                        button.getAttribute('data-status') + '</span>';
                    document.getElementById('viewPoints').textContent = button.getAttribute('data-points') + ' points';
                    document.getElementById('viewReviewerName').textContent = button.getAttribute('data-reviewer-name') || '-';
                    document.getElementById('viewReviewedAt').textContent = button.getAttribute('data-reviewed-at') || '-';
                    document.getElementById('viewReviewerComment').textContent = button.getAttribute('data-reviewer-comment') || 'No comment';

                    var filePath = button.getAttribute('data-file-path');
                    if (filePath) {
                        document.getElementById('viewFilePathContainer').style.display = 'block';
                        document.getElementById('viewFilePathLink').href = filePath;
                    } else {
                        document.getElementById('viewFilePathContainer').style.display = 'none';
                    }

                    safeCreateLucideIcons();
                });
            }
        });

        // Also run after full load as a fallback
        window.addEventListener('load', safeCreateLucideIcons);
    </script>
}
