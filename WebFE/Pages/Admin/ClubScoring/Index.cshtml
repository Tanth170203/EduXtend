@page
@model WebFE.Pages.Admin.ClubScoring.IndexModel
@{
    ViewData["Title"] = "Club Scoring";
    ViewData["Breadcrumb"] = "Club Scoring";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div>
            <h1 class="page-title">
                <i data-lucide="trophy" style="width: 28px; height: 28px; display: inline-block; vertical-align: middle; margin-right: 0.5rem;"></i>
                Club Scoring
            </h1>
            <p class="page-description">Manage and view club activity scores by month</p>
        </div>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-success" onclick="exportToExcel()">
                <i data-lucide="download" style="width: 16px; height: 16px;"></i>
                Export to Excel
            </button>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Total Clubs</p>
                        <h3 class="mb-0 fw-bold">@Model.TotalClubs</h3>
                        <small class="text-success">
                            <i data-lucide="trending-up" style="width: 12px; height: 12px;"></i>
                            In selected period
                        </small>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i data-lucide="users" style="width: 32px; height: 32px; color: #0d6efd;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Average Score</p>
                        <h3 class="mb-0 fw-bold text-success">
                            @(Model.ClubScores?.Any() == true ? Model.ClubScores.Average(r => r.TotalScore).ToString("F1") : "0")
                        </h3>
                        <small class="text-muted">/ 100 points</small>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i data-lucide="trending-up" style="width: 32px; height: 32px; color: #198754;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Scored Clubs</p>
                        <h3 class="mb-0 fw-bold text-info">@Model.ScoredClubs</h3>
                        <small class="text-muted">
                            @(Model.TotalClubs > 0 ? ((double)Model.ScoredClubs / Model.TotalClubs * 100).ToString("F1") : "0")% completed
                        </small>
                    </div>
                    <div class="rounded-circle bg-info bg-opacity-10 p-3">
                        <i data-lucide="check-circle" style="width: 32px; height: 32px; color: #0dcaf0;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-1 small">Not Scored</p>
                        <h3 class="mb-0 fw-bold text-warning">@Model.UnscoredClubs</h3>
                        <small class="text-muted">Pending review</small>
                    </div>
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                        <i data-lucide="clock" style="width: 32px; height: 32px; color: #ffc107;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" id="filterForm" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="semesterSelect" class="form-label fw-semibold">
                    <i data-lucide="calendar" style="width: 14px; height: 14px;"></i>
                    Semester
                </label>
                <select class="form-select" id="semesterSelect" name="semesterId" onchange="this.form.submit()">
                    @foreach (var s in Model.Semesters)
                    {
                        <option value="@s.Id" selected="@(Model.SelectedSemesterId == s.Id)">
                            @s.Name
                            @(s.IsActive ? "âœ“ Active" : "")
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="monthSelect" class="form-label fw-semibold">
                    <i data-lucide="calendar-days" style="width: 14px; height: 14px;"></i>
                    Month
                </label>
                <select class="form-select" id="monthSelect" name="month" onchange="this.form.submit()">
                    @foreach (var mo in Model.MonthOptions)
                    {
                        <option value="@mo.Month" selected="@(Model.SelectedMonth == mo.Month)">@mo.Display</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold">
                    <i data-lucide="search" style="width: 14px; height: 14px;"></i>
                    Search
                </label>
                <input type="text" class="form-control" id="searchInput" placeholder="Club name...">
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-outline-secondary w-100" onclick="resetFilters()">
                    <i data-lucide="x-circle" style="width: 14px; height: 14px;"></i>
                    Reset
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Club Scores Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">
                <i data-lucide="list" style="width: 18px; height: 18px;"></i>
                Club Scoring List
            </h5>
            <span class="badge bg-primary">@(Model.ClubScores?.Count ?? 0) clubs</span>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.ClubScores?.Any() == true)
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="clubsTable">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4" style="width: 60px;">#</th>
                            <th style="width: 80px;">Rank</th>
                            <th>Club Name</th>
                            <th class="text-center">Meetings</th>
                            <th class="text-center">Events</th>
                            <th class="text-center">Collaborations</th>
                            <th class="text-center">Competitions</th>
                            <th class="text-center">Plans</th>
                            <th class="text-center">Total Score</th>
                            <th class="text-center pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var sortedClubs = Model.ClubScores.OrderByDescending(c => c.TotalScore).ToList();
                            int rank = 1;
                            double previousScore = -1;
                            int displayRank = 1;
                        }
                        @foreach (var club in sortedClubs)
                        {
                            if (club.TotalScore != previousScore)
                            {
                                displayRank = rank;
                                previousScore = club.TotalScore;
                            }

                            var scoreClass = club.TotalScore >= 80 ? "success" : club.TotalScore >= 60 ? "warning" : "danger";
                            var medalIcon = displayRank == 1 ? "ðŸ¥‡" : displayRank == 2 ? "ðŸ¥ˆ" : displayRank == 3 ? "ðŸ¥‰" : "";

                            <tr class="club-row" data-name="@club.ClubName.ToLower()">
                                <td class="ps-4 text-muted">@rank</td>
                                <td>
                                    @if (displayRank <= 3)
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            @medalIcon #@displayRank
                                        </span>
                                    }
                                    else if (displayRank <= 10)
                                    {
                                        <span class="badge bg-info px-3 py-2">#@displayRank</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">#@displayRank</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            @(string.IsNullOrEmpty(club.ClubName) ? "?" : club.ClubName.Substring(0, 1).ToUpper())
                                        </div>
                                        <strong>@club.ClubName</strong>
                                    </div>
                                </td>
                                <td class="text-center"><span class="badge bg-light text-dark">@club.ClubMeetingScore</span></td>
                                <td class="text-center"><span class="badge bg-light text-dark">@club.EventScore</span></td>
                                <td class="text-center"><span class="badge bg-light text-dark">@club.CollaborationScore</span></td>
                                <td class="text-center"><span class="badge bg-light text-dark">@club.CompetitionScore</span></td>
                                <td class="text-center"><span class="badge bg-light text-dark">@club.PlanScore</span></td>
                                <td class="text-center">
                                    <div class="score-display">
                                        <strong class="fs-5 text-@scoreClass">@club.TotalScore.ToString("F1")</strong>
                                        <small class="text-muted d-block">/100</small>
                                    </div>
                                </td>
                                <td class="text-center pe-4">
                                    <a href="/Admin/ClubScoring/Detail?clubId=@club.ClubId&semesterId=@Model.SelectedSemesterId&month=@Model.SelectedMonth"
                                       class="btn btn-sm btn-outline-primary"
                                       title="View Details">
                                        <i data-lucide="external-link" style="width: 14px; height: 14px;"></i> Details
                                    </a>
                                </td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i data-lucide="inbox" style="width: 64px; height: 64px; color: #9ca3af;"></i>
                <p class="text-muted mt-3 mb-0">No club scoring data available</p>
                <p class="text-muted">Select a different semester or month to view data</p>
            </div>
        }
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
    }

    .score-display {
        padding: 8px;
        border-radius: 8px;
        background: #f8f9fa;
    }

    .club-row:hover {
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@section Scripts {
    <script>
        // Initialize Lucide icons
        (function(){ if (window.lucide && typeof lucide.createIcons==='function'){ try{ lucide.createIcons(lucide.icons||{});}catch{}} })();

        const searchInput = document.getElementById('searchInput');
        const clubsTable = document.getElementById('clubsTable');

        // Submit filter form when select changes - data changes immediately
        function submitFilter() {
            document.getElementById('filterForm').submit();
        }

        // Filter rows by search input (client-side)
        function filterRows() {
            if (!clubsTable) return;
            const term = (searchInput?.value || '').trim().toLowerCase();
            const rows = clubsTable.querySelectorAll('tbody tr.club-row');
            
            rows.forEach(row => {
                const name = row.getAttribute('data-name') || '';
                const visible = !term || name.includes(term);
                row.style.display = visible ? '' : 'none';
            });
        }

        // Reset search filter
        function resetFilters() {
            if (searchInput) searchInput.value = '';
            filterRows();
        }

        // Export to Excel
        function exportToExcel() {
            const exportUrl = '@Model.ExportUrl';
            if (exportUrl) {
                window.open(exportUrl, '_blank');
            } else {
                alert('Export URL not available');
            }
        }

        // Bind events
        if (searchInput) {
            searchInput.addEventListener('input', filterRows);
        }

        // Expose functions globally
        window.submitFilter = submitFilter;
        window.resetFilters = resetFilters;
        window.exportToExcel = exportToExcel;

        // Initial run
        document.addEventListener('DOMContentLoaded', filterRows);
    </script>
}
