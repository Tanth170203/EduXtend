@page
@model WebFE.Pages.Admin.MonthlyReports.IndexModel
@{
    ViewData["Title"] = "Monthly Reports Management";
    ViewData["Breadcrumb"] = "Monthly Reports";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">Monthly Reports Management</h1>
        <p class="page-description">Review and approve monthly activity reports from clubs</p>
    </div>
</div>

<!-- Filters -->
<div class="content-card mb-4">
    <div class="content-card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Club</label>
                <select name="FilterClubId" class="form-select">
                    <option value="">All Clubs</option>
                    @foreach (var club in Model.Clubs)
                    {
                        <option value="@club.Id" selected="@(Model.FilterClubId == club.Id)">@club.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Month</label>
                <select name="FilterMonth" class="form-select">
                    <option value="">All</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(Model.FilterMonth == i)">Month @i</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Year</label>
                <select name="FilterYear" class="form-select">
                    <option value="">All</option>
                    @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 3; year--)
                    {
                        <option value="@year" selected="@(Model.FilterYear == year)">@year</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select name="FilterStatus" class="form-select">
                    <option value="">All</option>
                    <option value="PendingApproval" selected="@(Model.FilterStatus == "PendingApproval")">Pending Approval</option>
                    <option value="Approved" selected="@(Model.FilterStatus == "Approved")">Approved</option>
                    <option value="Rejected" selected="@(Model.FilterStatus == "Rejected")">Rejected</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i data-lucide="filter" style="width: 16px; height: 16px;"></i>
                    Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Reports Table -->
<div class="content-card">
    <div class="content-card-header">
        <h5 class="content-card-title">Reports List (@Model.Reports.Count)</h5>
    </div>
    <div class="content-card-body">
        @if (Model.Reports.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width: 50px;">No.</th>
                            <th>Club</th>
                            <th>Month/Year</th>
                            <th>Status</th>
                            <th>Submitted Date</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Reports.Count; i++)
                        {
                            var report = Model.Reports[i];
                            var rowClass = report.Status == "PendingApproval" ? "table-warning" : "";
                            <tr class="@rowClass">
                                <td class="text-center">@(i + 1)</td>
                                <td>
                                    <strong>@report.ClubName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">Month @report.ReportMonth/@report.ReportYear</span>
                                </td>
                                <td>
                                    @if (report.Status == "Draft")
                                    {
                                        <span class="badge bg-secondary">Draft</span>
                                    }
                                    else if (report.Status == "PendingApproval")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i data-lucide="clock" style="width: 14px; height: 14px;"></i>
                                            Pending Approval
                                        </span>
                                    }
                                    else if (report.Status == "Approved")
                                    {
                                        <span class="badge bg-success">
                                            <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i>
                                            Approved
                                        </span>
                                    }
                                    else if (report.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">
                                            <i data-lucide="x-circle" style="width: 14px; height: 14px;"></i>
                                            Rejected
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (report.SubmittedAt.HasValue)
                                    {
                                        @report.SubmittedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Submitted</span>
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/MonthlyReports/Review/@report.Id" class="btn btn-sm btn-primary">
                                        <i data-lucide="eye" style="width: 14px; height: 14px;"></i>
                                        Review
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">
                <i data-lucide="info" style="width: 16px; height: 16px;"></i>
                No reports match the selected filters.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
