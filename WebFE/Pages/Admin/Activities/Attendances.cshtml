@page "/Admin/Activities/Attendances/{id:int}"
@model WebFE.Pages.Admin.Activities.AttendancesModel
@{
    ViewData["Title"] = "Attendance Management";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-clipboard2-check text-primary me-2"></i>Attendance Management
            </h2>
            <p class="text-muted mb-0">Activity ID: @Model.ActivityId</p>
        </div>
        <a class="btn btn-outline-secondary" href="/Admin/Activities/Details/@Model.ActivityId">
            <i class="bi bi-arrow-left me-2"></i>Back to Activity
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Registered</p>
                            <h3 class="fw-bold mb-0">@Model.Registrants.Count</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people-fill text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Present</p>
                            <h3 class="fw-bold mb-0 text-success">@Model.Registrants.Count(r => r.IsPresent == true)</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle-fill text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Absent</p>
                            <h3 class="fw-bold mb-0 text-danger">@Model.Registrants.Count(r => r.IsPresent == false)</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-x-circle-fill text-danger fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Not Marked</p>
                            <h3 class="fw-bold mb-0 text-warning">@Model.Registrants.Count(r => r.IsPresent == null)</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-question-circle-fill text-warning fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-list-check me-2"></i>Registrant List
                </h5>
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Search by name or email...">
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="attendanceTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="px-4 py-3" style="width: 50px;">#</th>
                            <th class="py-3">Participant</th>
                            <th class="py-3">Email</th>
                            <th class="py-3 text-center" style="width: 150px;">Status</th>
                            <th class="py-3 text-center" style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int index = 1; }
                        @foreach (var r in Model.Registrants)
                        {
                            <tr class="registrant-row">
                                <td class="px-4 text-muted">@index</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-person-fill text-primary"></i>
                                        </div>
                                        <span class="fw-medium registrant-name">@r.FullName</span>
                                    </div>
                                </td>
                                <td class="text-muted registrant-email">@r.Email</td>
                                <td class="text-center">
                                    @if (r.IsPresent == true)
                                    {
                                        @if (r.ParticipationScore.HasValue)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success">
                                                <i class="bi bi-check-circle-fill me-1"></i>Present
                                            </span>
                                            <div class="participation-score-display score-@r.ParticipationScore">
                                                <strong>
                                                    @if (r.ParticipationScore == 5)
                                                    {
                                                        <span>üòä <span style="font-size: 1.1em;">5 ƒëi·ªÉm</span></span>
                                                    }
                                                    else if (r.ParticipationScore == 4)
                                                    {
                                                        <span>üòê <span style="font-size: 1.1em;">4 ƒëi·ªÉm</span></span>
                                                    }
                                                    else if (r.ParticipationScore == 3)
                                                    {
                                                        <span>‚òπÔ∏è <span style="font-size: 1.1em;">3 ƒëi·ªÉm</span></span>
                                                    }
                                                    else
                                                    {
                                                        <span>@r.ParticipationScore ƒëi·ªÉm</span>
                                                    }
                                                </strong>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success">
                                                <i class="bi bi-check-circle-fill me-1"></i>Present
                                            </span>
                                        }
                                    }
                                    else if (r.IsPresent == false)
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger">
                                            <i class="bi bi-x-circle-fill me-1"></i>Absent
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning-subtle text-warning border border-warning">
                                            <i class="bi bi-clock-fill me-1"></i>Pending
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (r.IsPresent == true)
                                    {
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn @(r.ParticipationScore == 5 ? "btn-success" : "btn-outline-success") btn-sm participation-btn" 
                                                    onclick="setAttendanceWithScore(@Model.ActivityId, @r.UserId, 5, this)"
                                                    title="Xu·∫•t s·∫Øc - 5 ƒëi·ªÉm"
                                                    data-score="5"
                                                    data-selected="@(r.ParticipationScore == 5 ? "true" : "false")">
                                                @if (r.ParticipationScore == 5)
                                                {
                                                    <i class="bi bi-check-circle-fill me-1"></i>
                                                }
                                                üòä 5
                                            </button>
                                            <button type="button" class="btn @(r.ParticipationScore == 4 ? "btn-warning" : "btn-outline-warning") btn-sm participation-btn" 
                                                    onclick="setAttendanceWithScore(@Model.ActivityId, @r.UserId, 4, this)"
                                                    title="T·ªët - 4 ƒëi·ªÉm"
                                                    data-score="4"
                                                    data-selected="@(r.ParticipationScore == 4 ? "true" : "false")">
                                                @if (r.ParticipationScore == 4)
                                                {
                                                    <i class="bi bi-check-circle-fill me-1"></i>
                                                }
                                                üòê 4
                                            </button>
                                            <button type="button" class="btn @(r.ParticipationScore == 3 ? "btn-secondary" : "btn-outline-secondary") btn-sm participation-btn" 
                                                    onclick="setAttendanceWithScore(@Model.ActivityId, @r.UserId, 3, this)"
                                                    title="Trung b√¨nh - 3 ƒëi·ªÉm"
                                                    data-score="3"
                                                    data-selected="@(r.ParticipationScore == 3 ? "true" : "false")">
                                                @if (r.ParticipationScore == 3)
                                                {
                                                    <i class="bi bi-check-circle-fill me-1"></i>
                                                }
                                                ‚òπÔ∏è 3
                                            </button>
                                            <button type="button" class="btn btn-outline-danger btn-sm" 
                                                    onclick="setAttendance(@Model.ActivityId, @r.UserId, false, this)"
                                                    title="Mark as Absent">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-success" 
                                                    onclick="showParticipationModal(@Model.ActivityId, @r.UserId, '@r.FullName')"
                                                    title="Mark as Present with rating">
                                                <i class="bi bi-check-lg"></i> Present
                                            </button>
                                            <button type="button" class="btn @(r.IsPresent == false ? "btn-danger" : "btn-outline-danger")" 
                                                    onclick="setAttendance(@Model.ActivityId, @r.UserId, false, this)"
                                                    title="Mark as Absent">
                                                <i class="bi bi-x-lg"></i> Absent
                                            </button>
                                        </div>
                                    }
                                </td>
                            </tr>
                            index++;
                        }
                        @if (Model.Registrants.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                    <p class="mb-0">No registrants found for this activity</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-success-subtle { background-color: rgba(25, 135, 84, 0.1) !important; }
    .bg-danger-subtle { background-color: rgba(220, 53, 69, 0.1) !important; }
    .bg-warning-subtle { background-color: rgba(255, 193, 7, 0.1) !important; }
    
    .table tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }
    
    .btn-group-sm .btn {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }
    
    /* Highlight n√∫t emoji ƒë∆∞·ª£c ch·ªçn */
    .participation-btn[data-selected="true"] {
        font-weight: bold !important;
        border-width: 3px !important;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25) !important;
        transform: scale(1.05);
        position: relative;
    }
    
    .participation-btn[data-selected="true"]::after {
        content: '‚úì';
        position: absolute;
        top: -5px;
        right: -5px;
        background: #28a745;
        color: white;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        font-size: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        border: 2px solid white;
    }
    
    /* C·∫£i thi·ªán hi·ªÉn th·ªã ƒëi·ªÉm trong Status column */
    .participation-score-display {
        margin-top: 0.5rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        display: inline-block;
        font-size: 0.9rem;
    }
    
    .participation-score-display.score-5 {
        background-color: rgba(25, 135, 84, 0.15);
        color: #198754;
        border: 1px solid #198754;
    }
    
    .participation-score-display.score-4 {
        background-color: rgba(255, 193, 7, 0.15);
        color: #ffc107;
        border: 1px solid #ffc107;
    }
    
    .participation-score-display.score-3 {
        background-color: rgba(108, 117, 125, 0.15);
        color: #6c757d;
        border: 1px solid #6c757d;
    }
</style>

<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('.registrant-row');
        
        rows.forEach(row => {
            const name = row.querySelector('.registrant-name').textContent.toLowerCase();
            const email = row.querySelector('.registrant-email').textContent.toLowerCase();
            
            if (name.includes(searchTerm) || email.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Set attendance (instant UI update, no reload)
    async function setAttendance(activityId, userId, isPresent, btn) {
        const baseUrl = '@Model.ApiBaseUrl';
        const url = (baseUrl ? baseUrl : '') + `/api/admin/activities/${activityId}/attendance/${userId}?isPresent=${isPresent}`;
        
        try {
            const res = await fetch(url, {
                method: 'POST',
                credentials: 'include'
            });
            
            if (!res.ok) {
                const data = await res.json().catch(() => ({}));
                alert(data?.message || 'Update failed');
                return;
            }
            
            // Update UI instantly
            const clickedButton = btn;
            const btnGroup = clickedButton.closest('.btn-group');
            const row = clickedButton.closest('tr');
            const statusBadge = row.querySelector('.badge');

            const presentBtn = btnGroup.querySelector('button:first-child');
            const absentBtn = btnGroup.querySelector('button:last-child');

            if (isPresent) {
                presentBtn.classList.remove('btn-outline-success');
                presentBtn.classList.add('btn-success');
                absentBtn.classList.remove('btn-danger');
                absentBtn.classList.add('btn-outline-danger');
                statusBadge.className = 'badge bg-success-subtle text-success border border-success';
                statusBadge.innerHTML = '<i class="bi bi-check-circle-fill me-1"></i>Present';
            } else {
                presentBtn.classList.remove('btn-success');
                presentBtn.classList.add('btn-outline-success');
                absentBtn.classList.remove('btn-outline-danger');
                absentBtn.classList.add('btn-danger');
                statusBadge.className = 'badge bg-danger-subtle text-danger border border-danger';
                statusBadge.innerHTML = '<i class="bi bi-x-circle-fill me-1"></i>Absent';
            }
            // Temporary success hint
            clickedButton.innerHTML = '<i class="bi bi-check-lg"></i> Saved!';
            setTimeout(() => {
                clickedButton.innerHTML = isPresent
                    ? '<i class="bi bi-check-lg"></i> Present'
                    : '<i class="bi bi-x-lg"></i> Absent';
            }, 700);
        } catch (error) {
            alert('An error occurred while updating attendance');
        }
    }

    // Set attendance with participation score
    async function setAttendanceWithScore(activityId, userId, participationScore, btn) {
        const baseUrl = '@Model.ApiBaseUrl';
        const url = (baseUrl ? baseUrl : '') + 
            `/api/admin/activities/${activityId}/attendance/${userId}?isPresent=true&participationScore=${participationScore}`;
        
        try {
            // Update UI immediately for better UX
            const row = btn.closest('tr');
            const btnGroup = btn.closest('.btn-group');
            
            // Remove highlight from all buttons
            btnGroup.querySelectorAll('.participation-btn').forEach(b => {
                b.setAttribute('data-selected', 'false');
                b.classList.remove('btn-success', 'btn-warning', 'btn-secondary');
                b.classList.add('btn-outline-success', 'btn-outline-warning', 'btn-outline-secondary');
                const icon = b.querySelector('i.bi-check-circle-fill');
                if (icon) icon.remove();
            });
            
            // Highlight selected button
            btn.setAttribute('data-selected', 'true');
            if (participationScore === 5) {
                btn.classList.remove('btn-outline-success');
                btn.classList.add('btn-success');
            } else if (participationScore === 4) {
                btn.classList.remove('btn-outline-warning');
                btn.classList.add('btn-warning');
            } else if (participationScore === 3) {
                btn.classList.remove('btn-outline-secondary');
                btn.classList.add('btn-secondary');
            }
            
            // Add checkmark icon
            if (!btn.querySelector('i.bi-check-circle-fill')) {
                const icon = document.createElement('i');
                icon.className = 'bi bi-check-circle-fill me-1';
                btn.insertBefore(icon, btn.firstChild);
            }
            
            // Update status column
            const statusCell = row.querySelector('td:nth-child(4)');
            const existingScoreDisplay = statusCell.querySelector('.participation-score-display');
            if (existingScoreDisplay) {
                existingScoreDisplay.remove();
            }
            
            const scoreDisplay = document.createElement('div');
            scoreDisplay.className = `participation-score-display score-${participationScore}`;
            const emoji = participationScore === 5 ? 'üòä' : participationScore === 4 ? 'üòê' : '‚òπÔ∏è';
            scoreDisplay.innerHTML = `<strong>${emoji} <span style="font-size: 1.1em;">${participationScore} ƒëi·ªÉm</span></strong>`;
            statusCell.appendChild(scoreDisplay);
            
            const res = await fetch(url, {
                method: 'POST',
                credentials: 'include'
            });
            
            if (res.ok) {
                // Show success feedback
                const originalHTML = btn.innerHTML;
                btn.innerHTML = '<i class="bi bi-check-lg"></i> Saved!';
                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                }, 1000);
            } else {
                // Revert UI on error
                location.reload();
                const error = await res.json().catch(() => ({}));
                alert(error.message || 'Failed to update attendance');
            }
        } catch (err) {
            console.error('Error:', err);
            location.reload();
            alert('An error occurred while updating attendance');
        }
    }

    // Show modal to select participation score
    function showParticipationModal(activityId, userId, fullName) {
        // Remove existing modal if any
        const existingModal = document.getElementById('participationModal');
        if (existingModal) {
            existingModal.remove();
        }

        // Create modal HTML
        const modalHTML = `
            <div class="modal fade" id="participationModal" tabindex="-1" aria-labelledby="participationModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title" id="participationModalLabel">
                                <i class="bi bi-emoji-smile me-2"></i>ƒê√°nh gi√° m·ª©c ƒë·ªô tham gia
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center p-4">
                            <p class="mb-4"><strong class="fs-5">${fullName}</strong></p>
                            <p class="text-muted mb-4">Ch·ªçn m·ª©c ƒë·ªô tham gia ƒë·ªÉ c·ªông ƒëi·ªÉm phong tr√†o</p>
                            <div class="d-grid gap-3">
                                <button class="btn btn-lg btn-success" 
                                        onclick="setAttendanceWithScore(${activityId}, ${userId}, 5, this); bootstrap.Modal.getInstance(document.getElementById('participationModal')).hide()">
                                    <span style="font-size: 2.5rem;">üòä</span><br>
                                    <strong class="fs-5">Xu·∫•t s·∫Øc - 5 ƒëi·ªÉm</strong><br>
                                    <small class="text-white-50">Tham gia t√≠ch c·ª±c, ƒë√≥ng g√≥p nhi·ªÅu √Ω t∆∞·ªüng</small>
                                </button>
                                <button class="btn btn-lg btn-warning" 
                                        onclick="setAttendanceWithScore(${activityId}, ${userId}, 4, this); bootstrap.Modal.getInstance(document.getElementById('participationModal')).hide()">
                                    <span style="font-size: 2.5rem;">üòê</span><br>
                                    <strong class="fs-5">T·ªët - 4 ƒëi·ªÉm</strong><br>
                                    <small>Tham gia ƒë·∫ßy ƒë·ªß, l√†m theo y√™u c·∫ßu</small>
                                </button>
                                <button class="btn btn-lg btn-secondary" 
                                        onclick="setAttendanceWithScore(${activityId}, ${userId}, 3, this); bootstrap.Modal.getInstance(document.getElementById('participationModal')).hide()">
                                    <span style="font-size: 2.5rem;">‚òπÔ∏è</span><br>
                                    <strong class="fs-5">Trung b√¨nh - 3 ƒëi·ªÉm</strong><br>
                                    <small>C√≥ m·∫∑t nh∆∞ng thi·∫øu t·∫≠p trung</small>
                                </button>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                <i class="bi bi-x-circle me-2"></i>H·ªßy
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        `;
        
        // Add modal to body
        document.body.insertAdjacentHTML('beforeend', modalHTML);
        
        // Show modal
        const modal = new bootstrap.Modal(document.getElementById('participationModal'));
        modal.show();
        
        // Remove modal from DOM when hidden
        document.getElementById('participationModal').addEventListener('hidden.bs.modal', function () {
            this.remove();
        });
    }
</script>
