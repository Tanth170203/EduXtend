@page "/Admin/Activities/Attendances/{id:int}"
@model WebFE.Pages.Admin.Activities.AttendancesModel
@{
    ViewData["Title"] = "Attendances";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Attendances</h2>
        <a class="btn btn-outline-secondary" href="/Admin/Activities/Details/@Model.ActivityId">
            <i class="bi bi-arrow-left me-2"></i>Back to Activity
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th style="width:180px">Attendance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Registrants)
                        {
                            <tr>
                                <td>@r.FullName</td>
                                <td>@r.Email</td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm @(r.IsPresent == true ? "btn-success" : "btn-outline-success")" onclick="setAttendance(@Model.ActivityId, @r.UserId, true)">Present</button>
                                        <button class="btn btn-sm @(r.IsPresent == false ? "btn-danger" : "btn-outline-danger")" onclick="setAttendance(@Model.ActivityId, @r.UserId, false)">Absent</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    async function setAttendance(activityId, userId, isPresent) {
        const baseUrl = '@Model.ApiBaseUrl';
        const url = (baseUrl ? baseUrl : '') + `/api/admin/activities/${activityId}/attendance/${userId}?isPresent=${isPresent}`;
        const res = await fetch(url, {
            method: 'POST',
            credentials: 'include'
        });
        if (!res.ok) {
            const data = await res.json().catch(() => ({}));
            alert(data?.message || 'Update failed');
            return;
        }
        location.reload();
    }
</script>




