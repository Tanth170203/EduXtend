@page
@model WebFE.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">User Management</h1>
        <p class="page-description">Manage user accounts and permissions</p>
    </div>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#importUserModal">
        <i data-lucide="upload" style="width: 18px; height: 18px;"></i>
        Import Users
    </button>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="stats-grid mb-4">
    <div class="stat-card">
        <div class="stat-card-header">
            <p class="stat-card-title">Total Users</p>
            <div class="stat-card-icon blue"><i data-lucide="users" style="width: 24px; height: 24px;"></i></div>
        </div>
        <div class="stat-card-value">@Model.Users.Count</div>
    </div>
    <div class="stat-card">
        <div class="stat-card-header">
            <p class="stat-card-title">Active Users</p>
            <div class="stat-card-icon green"><i data-lucide="user-check" style="width: 24px; height: 24px;"></i></div>
        </div>
        <div class="stat-card-value">@Model.Users.Count(u => u.IsActive)</div>
    </div>
    <div class="stat-card">
        <div class="stat-card-header">
            <p class="stat-card-title">Banned Users</p>
            <div class="stat-card-icon red"><i data-lucide="user-x" style="width: 24px; height: 24px;"></i></div>
        </div>
        <div class="stat-card-value">@Model.Users.Count(u => !u.IsActive)</div>
    </div>
</div>

<div class="content-card">
    <div class="content-card-header">
        <h2 class="content-card-title">Users List</h2>
        <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Search..." style="max-width: 300px;">
    </div>
    <div class="content-card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="usersTable">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td><strong>@user.FullName</strong></td>
                            <td>@user.Email</td>
                            <td>@(user.PhoneNumber ?? "-")</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge bg-secondary me-1">@role.RoleName</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Banned</span>
                                }
                            </td>
                            <td>@(user.LastLoginAt?.ToString("dd/MM/yyyy HH:mm") ?? "Never")</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <form method="post" asp-page-handler="Ban" asp-route-id="@user.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i data-lucide="user-x" style="width: 14px; height: 14px;"></i> Ban
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Unban" asp-route-id="@user.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success">
                                            <i data-lucide="user-check" style="width: 14px; height: 14px;"></i> Unban
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Import Users Modal -->
<div class="modal fade" id="importUserModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">
                    <i data-lucide="upload" style="width: 20px; height: 20px;"></i>
                    Import Users from Excel
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-2">
                <div class="alert alert-light border d-flex align-items-start mb-3">
                    <i data-lucide="info" class="text-primary me-2" style="width: 20px; height: 20px; flex-shrink: 0;"></i>
                    <div>
                        <strong>How to import:</strong>
                        <ol class="mb-0 ps-3 mt-1">
                            <li>Download the <a href="#" onclick="downloadTemplate(); return false;" class="text-decoration-none fw-semibold">Excel template</a></li>
                            <li>Fill in user information</li>
                            <li>Upload the completed file below</li>
                        </ol>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i data-lucide="file-spreadsheet" style="width: 16px; height: 16px;"></i>
                        Select Excel File
                    </label>
                    <input type="file" class="form-control" id="importFile" accept=".xlsx,.xls" />
                    <small class="text-muted">Supported formats: .xlsx, .xls</small>
                </div>
                
                <div id="importProgress" style="display: none;">
                    <div class="progress mb-2" style="height: 8px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 100%"></div>
                    </div>
                    <p class="text-center text-muted mb-0">
                        <i data-lucide="loader" class="spinning" style="width: 16px; height: 16px;"></i>
                        Importing users...
                    </p>
                </div>
                
                <div id="importResult" style="display: none;"></div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="importUsers()">
                    <i data-lucide="upload" style="width: 16px; height: 16px;"></i>
                    Start Import
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .spinning {
            animation: spin 1s linear infinite;
        }
        
        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        
        .page-header {
            margin-bottom: 2rem;
        }
        
        .page-header .btn {
            padding: 0.5rem 1.5rem;
            font-weight: 500;
        }
    </style>
    <script>
        const API_BASE = 'https://localhost:5001/api';
        
        lucide.createIcons();
        
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('#usersTable tbody tr');
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
        
        // Download template
        async function downloadTemplate() {
            try {
                const response = await fetch(`${API_BASE}/admin/UserImport/template`, {
                    credentials: 'include'
                });
                
                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'UserImportTemplate.xlsx';
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                } else {
                    alert('Failed to download template');
                }
            } catch (error) {
                console.error('Error downloading template:', error);
                alert('Error downloading template');
            }
        }
        
        // Import users
        async function importUsers() {
            const fileInput = document.getElementById('importFile');
            const file = fileInput.files[0];
            
            if (!file) {
                alert('Please select a file');
                return;
            }
            
            const formData = new FormData();
            formData.append('file', file);
            
            // Show progress
            document.getElementById('importProgress').style.display = 'block';
            document.getElementById('importResult').style.display = 'none';
            
            try {
                const response = await fetch(`${API_BASE}/admin/UserImport/import`, {
                    method: 'POST',
                    credentials: 'include',
                    body: formData
                });
                
                const result = await response.json();
                
                // Hide progress
                document.getElementById('importProgress').style.display = 'none';
                
                // Show result
                const resultDiv = document.getElementById('importResult');
                resultDiv.style.display = 'block';
                
                if (response.ok) {
                    resultDiv.innerHTML = `
                        <div class="alert alert-success">
                            <i data-lucide="check-circle" style="width: 16px; height: 16px;"></i>
                            <strong>Import Successful!</strong><br>
                            ${result.successCount} users imported successfully<br>
                            ${result.failedCount > 0 ? `${result.failedCount} users failed` : ''}
                        </div>
                    `;
                    
                    // Reload page after 2 seconds
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                } else {
                    resultDiv.innerHTML = `
                        <div class="alert alert-danger">
                            <i data-lucide="alert-circle" style="width: 16px; height: 16px;"></i>
                            <strong>Import Failed!</strong><br>
                            ${result.message || 'An error occurred'}
                        </div>
                    `;
                }
                
                lucide.createIcons();
            } catch (error) {
                console.error('Error importing users:', error);
                document.getElementById('importProgress').style.display = 'none';
                document.getElementById('importResult').innerHTML = `
                    <div class="alert alert-danger">
                        <i data-lucide="alert-circle" style="width: 16px; height: 16px;"></i>
                        Error importing users. Please try again.
                    </div>
                `;
                document.getElementById('importResult').style.display = 'block';
                lucide.createIcons();
            }
        }
    </script>
}

