<!-- Add Income Modal -->
<div class="modal fade" id="addIncomeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Income</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addIncomeForm">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label for="incomeTitle" class="form-label">Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="incomeTitle" required maxlength="200" placeholder="e.g., University Sponsorship">
                        </div>
                        <div class="col-md-4">
                            <label for="incomeAmount" class="form-label">Amount (₫) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="incomeAmount" required min="0" step="1000">
                        </div>
                        <div class="col-md-6">
                            <label for="incomeCategory" class="form-label">Category</label>
                            <select class="form-select" id="incomeCategory">
                                <option value="">Select category...</option>
                                <option value="sponsorship">Sponsorship</option>
                                <option value="event_revenue">Event Revenue</option>
                                <option value="member_fees">Member Fees</option>
                                <option value="donation">Donation</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="incomeMethod" class="form-label">Payment Method <span class="text-danger">*</span></label>
                            <select class="form-select" id="incomeMethod" required>
                                <option value="Cash">Cash</option>
                                <option value="VNPAY">VNPAY</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="incomeDate" class="form-label">Transaction Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="incomeDate" required>
                        </div>
                        <div class="col-md-6">
                            <label for="incomeReceiptUrl" class="form-label">Receipt Image</label>
                            <input type="file" class="form-control" id="incomeReceiptFile" accept="image/*">
                            <small class="text-muted">Upload receipt/invoice image</small>
                        </div>
                        <div class="col-12">
                            <label for="incomeActivity" class="form-label">Related Activity</label>
                            <select class="form-select" id="incomeActivity">
                                <option value="">None (General Income)</option>
                                <!-- Activities will be loaded dynamically -->
                            </select>
                            <small class="text-muted">Select an activity if this income is related to a specific event</small>
                        </div>
                        <div class="col-12">
                            <label for="incomeDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="incomeDescription" rows="2" maxlength="500" placeholder="Add details about this income..."></textarea>
                        </div>
                        <div class="col-12">
                            <label for="incomeNotes" class="form-label">Notes</label>
                            <textarea class="form-control" id="incomeNotes" rows="2" maxlength="1000" placeholder="Internal notes..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i data-lucide="save" style="width: 16px; height: 16px;"></i>
                        Add Income
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

