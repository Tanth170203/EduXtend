        function copyAttendanceCode(evt, code) {
            console.log('Copying code:', code, 'Type:', typeof code);
            
            // Ensure code is a string
            if (!code || code === 'undefined') {
                showToast('Invalid attendance code', 'danger');
                return;
            }
            
            // Check if clipboard API is available
            if (!navigator.clipboard) {
                console.error('Clipboard API not available');
                // Fallback method
                copyToClipboardFallback(code);
                return;
            }
            
            navigator.clipboard.writeText(String(code)).then(function() {
                console.log('Copy successful');
                // Show success feedback
                const btn = evt.target.closest('button');
                btn.classList.remove('btn-warning');
                btn.classList.add('btn-success');
                btn.innerHTML = '<i data-lucide="check" style="width: 16px; height: 16px;"></i> Copied!';
                lucide.createIcons();
                
                // Show success message
                showToast('Copied attendance code: ' + code, 'success');
                
                setTimeout(function() {
                    btn.innerHTML = '<i data-lucide="clipboard" style="width: 16px; height: 16px;"></i> Copy Code';
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-warning');
                    lucide.createIcons();
                }, 2000);
            }).catch(function(err) {
                console.error('Copy failed:', err);
                showToast('Failed to copy code: ' + err.message, 'danger');
            });
        }
        
        function copyToClipboardFallback(text) {
            const textArea = document.createElement('textarea');
            textArea.value = text;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            document.body.appendChild(textArea);
            textArea.select();
            
            try {
                document.execCommand('copy');
                showToast('Copied attendance code: ' + text, 'success');
            } catch (err) {
                console.error('Fallback copy failed:', err);
                showToast('Failed to copy code', 'danger');
            }
            
            document.body.removeChild(textArea);
        }
        
        function showToast(message, type) {
            // Validate parameters
            if (!message) message = 'Operation successful';
            if (!type) type = 'success';
            
            // Create toast container if not exists
            let toastContainer = document.getElementById('toastContainer');
            if (!toastContainer) {
                toastContainer = document.createElement('div');
                toastContainer.id = 'toastContainer';
                toastContainer.className = 'toast-container position-fixed top-0 end-0 p-3';
                toastContainer.style.zIndex = '9999';
                document.body.appendChild(toastContainer);
            }
            
            // Choose icon based on type
            const iconName = type === 'success' ? 'check-circle' : 'alert-circle';
            
            // Create toast element
            const toastId = 'toast-' + Date.now();
            const toastDiv = document.createElement('div');
            toastDiv.id = toastId;
            toastDiv.className = `toast align-items-center text-white bg-${type} border-0`;
            toastDiv.setAttribute('role', 'alert');
            toastDiv.setAttribute('aria-live', 'assertive');
            toastDiv.setAttribute('aria-atomic', 'true');
            
            toastDiv.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        <i data-lucide="${iconName}" style="width: 16px; height: 16px;"></i> ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            
            toastContainer.appendChild(toastDiv);
            const toast = new bootstrap.Toast(toastDiv, { delay: 3000 });
            toast.show();
            
            // Initialize Lucide icons in toast
            lucide.createIcons();
            
            // Remove toast element after it's hidden
            toastDiv.addEventListener('hidden.bs.toast', function() {
                toastDiv.remove();
            });
        }
        
        async function completeActivity(activityId) {
            const btn = document.getElementById('completeActivityBtn');
            
            // Confirm action
            if (!confirm('Are you sure you want to complete this activity? This will award movement points to your club.')) {
                return;
            }
            
            // Disable button and show loading state
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Completing...';
            
            try {
                const baseUrl = '@Model.ApiBaseUrl';
                const url = (baseUrl ? baseUrl : '') + `/api/activity/club-manager/${activityId}/complete`;
                const res = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include'
                });

                const data = await res.json().catch(() => ({}));
                
                if (!res.ok) {
                    const msg = data?.message || 'Failed to complete activity';
                    showToast('Error: ' + msg, 'danger');
                    // Re-enable button
                    btn.disabled = false;
                    btn.innerHTML = '<i data-lucide="check-circle" style="width: 16px; height: 16px;"></i> Complete Activity';
                    lucide.createIcons();
                    return;
                }

                // Success - show toast notification with point details
                let successMessage = data?.message || 'Activity completed successfully!';
                
                if (data?.organizingClubPoints !== undefined && data.organizingClubPoints > 0) {
                    successMessage += ` Your club earned ${data.organizingClubPoints} points.`;
                }
                
                if (data?.collaboratingClubPoints !== undefined && data.collaboratingClubPoints > 0) {
                    successMessage += ` Collaborating club earned ${data.collaboratingClubPoints} points.`;
                }
                
                showToast(successMessage, 'success');
                
                // Refresh page after a short delay to show updated status
                setTimeout(() => {
                    location.reload();
                }, 1500);
                
            } catch (e) {
                showToast('Failed to complete activity. Please try again.', 'danger');
                // Re-enable button
                btn.disabled = false;
                btn.innerHTML = '<i data-lucide="check-circle" style="width: 16px; height: 16px;"></i> Complete Activity';
                lucide.createIcons();
            }
        }
    </script>
