@page "{id:int}"
@model WebFE.Pages.ClubManager.Activities.DetailsModel
@{
    ViewData["Title"] = "Activity Details";
    ViewData["Breadcrumb"] = "Activity Details";
    Layout = "~/Pages/Shared/_ClubManagerLayout.cshtml";
    var activity = Model.Activity!;
    
    // Check if activity has ended
    var now = DateTime.Now;
    var isEnded = activity.EndTime < now;
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">@activity.Title</h1>
        <p class="page-description">Activity details and information</p>
    </div>
    <div class="d-flex gap-2">
        <a href="/ClubManager/Activities" class="btn btn-outline-secondary">
            <i data-lucide="arrow-left" style="width: 16px; height: 16px;"></i>
            Back
        </a>
        @if (activity.Status != "Approved")
        {
            @if (!isEnded && activity.Status != "Completed")
            {
                <a href="/ClubManager/Activities/Edit/@activity.Id" class="btn btn-primary">
                    <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                    Edit
                </a>
            }
            else
            {
                <button class="btn btn-secondary" disabled title="@(isEnded ? "Edit Activity (Started)" : "Edit Activity (Completed)")">
                    <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                    Edit @(isEnded ? "(Started)" : "(Completed)")
                </button>
            }
        }
    </div>
</div>

<!-- Complete Activity Quick Action -->
@if (!Model.IsCollaboratedActivity && isEnded && activity.Status == "Approved")
{
    <div class="card shadow-sm border-0 mb-4 border-start border-success border-4">
        <div class="card-body">
            <h5 class="fw-bold mb-3">
                <i data-lucide="zap" style="width: 20px; height: 20px;"></i> Quick Actions
            </h5>
            <button type="button" 
                    class="btn btn-success" 
                    id="completeActivityBtn"
                    onclick="completeActivity(@activity.Id)"
                    title="Mark this activity as completed and award movement points to the organizing club">
                <i data-lucide="check-circle" style="width: 16px; height: 16px;"></i> Complete Activity
            </button>
            <p class="text-muted small mb-0 mt-2">
                <i data-lucide="info" style="width: 14px; height: 14px;"></i> This will mark the activity as completed and automatically award movement points to your club.
            </p>
        </div>
    </div>
}

<div class="row g-4">
    <!-- Main Information -->
    <div class="col-lg-8">
        <div class="content-card mb-4">
            <div class="content-card-body">
                @if (!string.IsNullOrWhiteSpace(activity.ImageUrl))
                {
                    <img src="@activity.ImageUrl" class="img-fluid rounded mb-4" 
                         style="max-height: 400px; width: 100%; object-fit: cover;" alt="@activity.Title" />
                }
                
                <div class="mb-4">
                    <h5 class="fw-semibold mb-3">Description</h5>
                    <p class="text-muted" style="white-space: pre-wrap;">@(activity.Description ?? "No description provided")</p>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded">
                            <small class="text-muted d-block mb-1">
                                <i data-lucide="tag" style="width: 14px; height: 14px;"></i> Type
                            </small>
                            <span class="badge bg-info">@activity.Type</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded">
                            <small class="text-muted d-block mb-1">
                                <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i> Status
                            </small>
                            @{
                                var statusClass = activity.Status switch
                                {
                                    "Approved" => "success",
                                    "PendingApproval" => "warning text-dark",
                                    "Rejected" => "danger",
                                    "CollaborationRejected" => "warning text-dark",
                                    "Completed" => "secondary",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@statusClass">@activity.Status</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded">
                            <small class="text-muted d-block mb-1">
                                <i data-lucide="eye" style="width: 14px; height: 14px;"></i> Visibility
                            </small>
                            @if (activity.IsPublic)
                            {
                                <span class="badge bg-success">Public</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Private</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded">
                            <small class="text-muted d-block mb-1">
                                <i data-lucide="award" style="width: 14px; height: 14px;"></i> Movement Points
                            </small>
                            <strong class="text-success">+@activity.MovementPoint points</strong>
                        </div>
                    </div>
                </div>

                @* Display rejection reasons *@
                @if (activity.Status == "Rejected" && !string.IsNullOrWhiteSpace(activity.RejectionReason))
                {
                    <div class="alert alert-danger mt-4" role="alert">
                        <div class="d-flex">
                            <i data-lucide="alert-circle" class="me-3" style="width: 20px; height: 20px; flex-shrink: 0;"></i>
                            <div>
                                <h6 class="alert-heading mb-2">Activity Rejected by Admin</h6>
                                <p class="mb-0" style="white-space: pre-wrap;">@activity.RejectionReason</p>
                            </div>
                        </div>
                    </div>
                }

                @if (activity.Status == "CollaborationRejected" && !string.IsNullOrWhiteSpace(activity.CollaborationRejectionReason))
                {
                    <div class="alert alert-warning mt-4" role="alert">
                        <div class="d-flex">
                            <i data-lucide="x-circle" class="me-3" style="width: 20px; height: 20px; flex-shrink: 0;"></i>
                            <div>
                                <h6 class="alert-heading mb-2">Collaboration Rejected</h6>
                                <p class="mb-2"><strong>Câu lạc bộ đối tác đã từ chối lời mời hợp tác.</strong></p>
                                <p class="mb-2"><strong>Lý do:</strong></p>
                                <p class="mb-0" style="white-space: pre-wrap;">@activity.CollaborationRejectionReason</p>
                                <hr class="my-3" />
                                <p class="mb-0 small">
                                    <i data-lucide="info" style="width: 14px; height: 14px;"></i>
                                    Bạn có thể chỉnh sửa hoạt động này để chọn câu lạc bộ khác hoặc thay đổi thông tin và gửi lại lời mời.
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Schedule & Location -->
        <div class="content-card mb-4">
            <div class="content-card-header">
                <h5 class="content-card-title">Schedule & Location</h5>
            </div>
            <div class="content-card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i data-lucide="calendar" class="text-primary me-3" style="width: 20px; height: 20px; margin-top: 2px;"></i>
                            <div>
                                <small class="text-muted d-block">Start Time</small>
                                <strong>@activity.StartTime.ToString("dddd, dd MMMM yyyy")</strong>
                                <div class="text-muted">@activity.StartTime.ToString("HH:mm")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i data-lucide="calendar-check" class="text-success me-3" style="width: 20px; height: 20px; margin-top: 2px;"></i>
                            <div>
                                <small class="text-muted d-block">End Time</small>
                                <strong>@activity.EndTime.ToString("dddd, dd MMMM yyyy")</strong>
                                <div class="text-muted">@activity.EndTime.ToString("HH:mm")</div>
                            </div>
                        </div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(activity.Location))
                    {
                        <div class="col-12">
                            <div class="d-flex align-items-start">
                                <i data-lucide="map-pin" class="text-danger me-3" style="width: 20px; height: 20px; margin-top: 2px;"></i>
                                <div>
                                    <small class="text-muted d-block">Location</small>
                                    <strong>@activity.Location</strong>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Activity Timeline -->
        <div id="scheduleDisplaySection" class="card shadow-sm border-0 mb-4" style="display: none;">
            <div class="card-body p-4">
                <h5 class="fw-semibold mb-3">
                    <i class="bi bi-clock-history me-2"></i>
                    Activity Timeline
                </h5>
                <div id="timelineContainer" class="timeline">
                    <!-- Timeline items will be rendered here by JavaScript -->
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- GPS Check-in Card -->
        <div class="content-card mb-4 bg-primary bg-opacity-10">
            <div class="content-card-header">
                <h5 class="content-card-title">
                    <i data-lucide="map-pin" style="width: 18px; height: 18px;"></i>
                    GPS Check-in
                </h5>
            </div>
            <div class="content-card-body text-center">
                <p class="text-muted mb-3">Cho phép sinh viên điểm danh bằng vị trí GPS</p>
                <a href="/ClubManager/Activities/GpsConfig/@activity.Id" class="btn btn-primary w-100">
                    <i data-lucide="settings" style="width: 16px; height: 16px;"></i>
                    Cấu hình GPS
                </a>
            </div>
        </div>

        @* ============================================================
           ATTENDANCE CODE CARD - TEMPORARILY HIDDEN (not deleted)
           Code-based attendance is disabled, only GPS is supported
           Uncomment this section to re-enable code-based attendance
           ============================================================ *@
        @* 
        <!-- Attendance Code Card -->
        @if (!string.IsNullOrWhiteSpace(activity.AttendanceCode))
        {
            <div class="content-card mb-4 bg-warning bg-opacity-10">
                <div class="content-card-header">
                    <h5 class="content-card-title">
                        <i data-lucide="qr-code" style="width: 18px; height: 18px;"></i>
                        Attendance Code
                    </h5>
                </div>
                <div class="content-card-body text-center">
                    <div class="bg-white rounded p-3 mb-3">
                        <code class="fs-3 fw-bold" style="letter-spacing: 0.3em; color: #333;">@activity.AttendanceCode</code>
                    </div>
                    <button class="btn btn-warning w-100" onclick="copyAttendanceCode(event, '@Html.Raw(activity.AttendanceCode)')">
                        <i data-lucide="clipboard" style="width: 16px; height: 16px;"></i>
                        Copy Code
                    </button>
                    <small class="text-muted d-block mt-2">Share this code with students for self check-in</small>
                </div>
            </div>
        }
        *@
        
        <!-- Statistics Card -->
        <div class="content-card mb-4">
            <div class="content-card-header">
                <h5 class="content-card-title">Statistics</h5>
            </div>
            <div class="content-card-body">
                <div class="mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            <i data-lucide="users" style="width: 14px; height: 14px;"></i> Participants
                        </small>
                        <strong>@activity.RegisteredCount</strong>
                    </div>
                    @if (activity.MaxParticipants.HasValue)
                    {
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-primary" 
                                 style="width: @((double)activity.RegisteredCount / activity.MaxParticipants.Value * 100)%"></div>
                        </div>
                        <small class="text-muted">@activity.RegisteredCount / @activity.MaxParticipants maximum</small>
                    }
                    else
                    {
                        <small class="text-muted">Unlimited capacity</small>
                    }
                </div>

                <div class="mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i data-lucide="check-circle" style="width: 14px; height: 14px;"></i> Attended
                        </small>
                        <strong>@activity.AttendedCount</strong>
                    </div>
                </div>

                <div class="mb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i data-lucide="message-square" style="width: 14px; height: 14px;"></i> Feedback
                        </small>
                        <strong>@activity.FeedbackCount</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="content-card mb-4">
            <div class="content-card-header">
                <h5 class="content-card-title">Quick Actions</h5>
                <small class="text-muted">Status: @activity.Status | IsPublic: @activity.IsPublic</small>
            </div>
            <div class="content-card-body">
                <div class="d-grid gap-2">
                    @if (!Model.IsCollaboratedActivity && activity.Status != "Approved")
                    {
                        @if (!isEnded && activity.Status != "Completed")
                        {
                            <a href="/ClubManager/Activities/Edit/@activity.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square me-2"></i>Edit Activity
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-outline-secondary" disabled title="@(isEnded ? "Edit Activity (Started)" : "Edit Activity (Completed)")">
                                <i class="bi bi-pencil-square me-2"></i>Edit Activity @(isEnded ? "(Started)" : "(Completed)")
                            </button>
                        }
                    }
                    @* Only show attendance for approved activities and only for owner (not collaborated) *@
                    @if (!Model.IsCollaboratedActivity && activity.Status == "Approved")
                    {
                        <a href="/ClubManager/Activities/Attendances/@activity.Id" class="btn btn-outline-success">
                            <i class="bi bi-clipboard-check me-2"></i>Manage Attendance
                        </a>
                    }
                    @* Show feedback for all approved activities (both owner and collaborated) *@
                    @if (activity.Status == "Approved")
                    {
                        <a href="/ClubManager/Activities/Feedbacks/@activity.Id" class="btn btn-outline-info">
                            <i class="bi bi-chat-left-text me-2"></i>View Feedback
                        </a>
                    }
                    @* Activity Evaluation for completed public activities *@
                    @if (activity.IsPublic && activity.Status == "Completed")
                    {
                        @if (!activity.HasEvaluation)
                        {
                            <a href="/ClubManager/Activities/Evaluate/@activity.Id" class="btn btn-outline-warning">
                                <i class="bi bi-star me-2"></i>Evaluate Activity
                            </a>
                        }
                        else
                        {
                            <a href="/ClubManager/Activities/EvaluationDetail/@activity.Id" class="btn btn-outline-primary">
                                <i class="bi bi-eye me-2"></i>View Activity Evaluation
                            </a>
                        }
                    }
                    @* Member Evaluation for completed activities *@
                    @if (activity.Status == "Completed")
                    {
                        <a href="/ClubManager/ActivityMemberEvaluations?activityId=@activity.Id" class="btn btn-outline-info">
                            <i class="bi bi-star-fill me-2"></i>Evaluate Members
                        </a>
                    }
                    @* Communication Plan for approved/completed activities *@
                    @if (activity.IsPublic && (activity.Status == "Approved" || activity.Status == "Completed"))
                    {
                        <a href="/ClubManager/CommunicationPlans/Create?activityId=@activity.Id" class="btn btn-outline-success">
                            <i class="bi bi-megaphone me-2"></i>Create Communication Plan
                        </a>
                    }
                    @if (activity.Status != "Approved" && activity.Status != "Completed")
                    {
                        @if (!isEnded && activity.Status != "Completed")
                        {
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash me-2"></i>Delete Activity
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-secondary" disabled title="@(isEnded ? "Delete Activity (Started)" : "Delete Activity (Completed)")">
                                <i class="bi bi-trash me-2"></i>Delete Activity @(isEnded ? "(Started)" : "(Completed)")
                            </button>
                        }
                    }
                    <a href="/ClubManager/Activities" class="btn btn-outline-secondary">
                        <i class="bi bi-list me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>

        <!-- Club Information -->
        @if (!string.IsNullOrWhiteSpace(activity.ClubName))
        {
            <div class="content-card mb-4">
                <div class="content-card-header">
                    <h5 class="content-card-title">Club</h5>
                </div>
                <div class="content-card-body">
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrWhiteSpace(activity.ClubLogo))
                        {
                            <img src="@activity.ClubLogo" alt="@activity.ClubName" 
                                 class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-primary text-white rounded me-3 d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px;">
                                <i data-lucide="users"></i>
                            </div>
                        }
                        <div>
                            <strong>@activity.ClubName</strong>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Timestamps -->
        <div class="content-card">
            <div class="content-card-header">
                <h5 class="content-card-title">Timestamps</h5>
            </div>
            <div class="content-card-body">
                <div class="mb-3">
                    <small class="text-muted d-block">Created</small>
                    <span>@activity.CreatedAt.ToString("dd MMM yyyy, HH:mm")</span>
                </div>
                @if (activity.ApprovedAt.HasValue)
                {
                    <div class="mb-3">
                        <small class="text-muted d-block">Approved</small>
                        <span>@activity.ApprovedAt.Value.ToString("dd MMM yyyy, HH:mm")</span>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(activity.ApprovedByName))
                {
                    <div>
                        <small class="text-muted d-block">Approved By</small>
                        <span>@activity.ApprovedByName</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i data-lucide="alert-triangle" style="width: 20px; height: 20px;"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete this activity?</p>
                <p class="text-danger small mb-0 mt-2">
                    <strong>Warning:</strong> This action cannot be undone. All registrations and attendance records will be removed.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" style="display: inline;">
                    <input type="hidden" name="id" value="@activity.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>
                        Delete Activity
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .timeline {
            position: relative;
        }
        
        .timeline-item {
            display: flex;
            gap: 16px;
            padding-bottom: 24px;
            position: relative;
        }
        
        .timeline-item:not(:last-child)::before {
            content: '';
            position: absolute;
            left: 47px;
            top: 48px;
            bottom: 0;
            width: 2px;
            background: linear-gradient(180deg, #0d6efd 0%, #e9ecef 100%);
        }
        
        .timeline-time {
            flex-shrink: 0;
            width: 95px;
            text-align: center;
        }
        
        .timeline-time-badge {
            display: inline-flex;
            flex-direction: column;
            align-items: center;
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            color: white;
            padding: 8px 12px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.85rem;
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
            min-width: 85px;
        }
        
        .timeline-time-badge .time-range {
            font-size: 0.75rem;
            opacity: 0.9;
        }
        
        .timeline-time-badge .time-start {
            font-size: 1rem;
            font-weight: 700;
        }
        
        .timeline-marker-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex-shrink: 0;
        }
        
        .timeline-marker {
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: white;
            border: 3px solid #0d6efd;
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.15);
            z-index: 1;
        }
        
        .timeline-item:first-child .timeline-marker {
            background: #0d6efd;
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.25);
        }
        
        .timeline-content {
            flex: 1;
            background: #f8f9fa;
            border-radius: 12px;
            padding: 16px 20px;
            border: 1px solid #e9ecef;
            transition: all 0.2s ease;
        }
        
        .timeline-content:hover {
            background: #fff;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
            border-color: #0d6efd;
        }
        
        .timeline-title {
            font-size: 1rem;
            font-weight: 600;
            color: #212529;
            margin-bottom: 4px;
        }
        
        .timeline-description {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0;
        }
        
        .timeline-notes {
            background: #e7f1ff;
            border-left: 3px solid #0d6efd;
            padding: 8px 12px;
            border-radius: 0 8px 8px 0;
            margin-top: 10px;
            font-size: 0.85rem;
        }
        
        .timeline-assignments {
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px dashed #dee2e6;
        }
        
        .assignment-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: #e9ecef;
            color: #495057;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            margin: 2px;
        }
        
        .assignment-badge i {
            color: #0d6efd;
        }
    </style>
    
    <script>
        // Activity type classification
        const COMPLEX_ACTIVITY_TYPES = [
            'LargeEvent', 'MediumEvent', 'SmallEvent',
            'SchoolCompetition', 'ProvincialCompetition', 'NationalCompetition',
            'ClubCollaboration', 'SchoolCollaboration'
        ];
        
        // Check if activity type is complex (requires schedules)
        function isComplexActivity(activityType) {
            return COMPLEX_ACTIVITY_TYPES.includes(activityType);
        }
        
        // Format time from TimeSpan (HH:mm:ss format) to readable format
        function formatTime(timeSpan) {
            if (!timeSpan) return '';
            
            // TimeSpan comes as "HH:mm:ss" string from API
            const parts = timeSpan.split(':');
            if (parts.length >= 2) {
                return `${parts[0]}:${parts[1]}`;
            }
            return timeSpan;
        }
        
        // Render timeline items
        function renderTimeline(schedules) {
            const container = document.getElementById('timelineContainer');
            
            if (!schedules || schedules.length === 0) {
                container.innerHTML = `
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-calendar-x fs-1 mb-3 d-block"></i>
                        <p class="mb-0">No schedule items available for this activity.</p>
                    </div>
                `;
                return;
            }
            
            // Sort schedules by start time (handle both camelCase and PascalCase)
            const sortedSchedules = [...schedules].sort((a, b) => {
                const aTime = a.startTime || a.StartTime || '';
                const bTime = b.startTime || b.StartTime || '';
                return aTime.localeCompare(bTime);
            });
            
            let html = '<div class="timeline">';
            
            sortedSchedules.forEach((schedule, index) => {
                // Handle both camelCase and PascalCase property names
                const startTime = formatTime(schedule.startTime || schedule.StartTime);
                const endTime = formatTime(schedule.endTime || schedule.EndTime);
                const title = schedule.title || schedule.Title || '';
                const description = schedule.description || schedule.Description;
                const notes = schedule.notes || schedule.Notes;
                const assignments = schedule.assignments || schedule.Assignments || [];
                
                html += `
                    <div class="timeline-item">
                        <!-- Time Badge on the left -->
                        <div class="timeline-time">
                            <div class="timeline-time-badge">
                                <span class="time-start">${startTime}</span>
                                <span class="time-range">đến ${endTime}</span>
                            </div>
                        </div>
                        
                        <!-- Marker -->
                        <div class="timeline-marker-wrapper">
                            <div class="timeline-marker"></div>
                        </div>
                        
                        <!-- Content -->
                        <div class="timeline-content">
                            <h6 class="timeline-title">${escapeHtml(title)}</h6>
                `;
                
                if (description) {
                    html += `<p class="timeline-description">${escapeHtml(description)}</p>`;
                }
                
                if (notes) {
                    html += `
                        <div class="timeline-notes">
                            <i class="bi bi-sticky me-1"></i>
                            <strong>Ghi chú:</strong> ${escapeHtml(notes)}
                        </div>
                    `;
                }
                
                if (assignments.length > 0) {
                    html += `
                        <div class="timeline-assignments">
                            <small class="text-muted d-block mb-2">
                                <i class="bi bi-people-fill me-1"></i>
                                <strong>Phân công:</strong>
                            </small>
                            <div class="d-flex flex-wrap">
                    `;
                    
                    assignments.forEach(assignment => {
                        const name = assignment.responsibleName || assignment.ResponsibleName || 'Unknown';
                        const role = assignment.role || assignment.Role;
                        const roleText = role ? ` (${escapeHtml(role)})` : '';
                        
                        html += `
                            <span class="assignment-badge">
                                <i class="bi bi-person-fill"></i>
                                ${escapeHtml(name)}${roleText}
                            </span>
                        `;
                    });
                    
                    html += `
                            </div>
                        </div>
                    `;
                }
                
                html += `
                        </div>
                    </div>
                `;
            });
            
            html += '</div>';
            container.innerHTML = html;
        }
        
        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
