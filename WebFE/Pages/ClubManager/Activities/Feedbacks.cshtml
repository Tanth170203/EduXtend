@page "/ClubManager/Activities/Feedbacks/{id:int}"
@model WebFE.Pages.ClubManager.Activities.FeedbacksModel
@{
    ViewData["Title"] = "Activity Feedbacks";
    Layout = "~/Pages/Shared/_ClubManagerLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-chat-left-text me-2"></i>Activity Feedbacks
            </h2>
            <p class="text-muted mb-0">View participant feedback and ratings</p>
        </div>
        <a class="btn btn-outline-secondary px-4" href="/ClubManager/Activities/Details/@Model.ActivityId">
            <i class="bi bi-arrow-left me-2"></i>Back to Activity
        </a>
    </div>

    @if (Model.Items.Any())
    {
        <!-- Summary Stats -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-star-fill text-warning mb-2" style="font-size: 2rem;"></i>
                        <h3 class="fw-bold mb-1 text-primary">@Model.Items.Average(f => f.Rating).ToString("F1")</h3>
                        <p class="text-muted mb-0">Average Rating</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-people-fill text-success mb-2" style="font-size: 2rem;"></i>
                        <h3 class="fw-bold mb-1 text-success">@Model.Items.Count</h3>
                        <p class="text-muted mb-0">Total Responses</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-chat-square-text-fill text-info mb-2" style="font-size: 2rem;"></i>
                        <h3 class="fw-bold mb-1 text-info">@Model.Items.Count(f => !string.IsNullOrWhiteSpace(f.Comment))</h3>
                        <p class="text-muted mb-0">With Comments</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Feedback Cards -->
        <div class="row g-3">
            @foreach (var f in Model.Items.OrderByDescending(f => f.CreatedAt))
            {
                <div class="col-12">
                    <div class="card shadow-sm border-0 hover-card">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                                        <i class="bi bi-person-fill text-primary" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0 fw-semibold">@f.FullName</h5>
                                        <p class="mb-0 text-muted small">
                                            <i class="bi bi-envelope me-1"></i>@f.Email
                                        </p>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= f.Rating)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted"></i>
                                            }
                                        }
                                        <span class="badge bg-warning text-dark ms-2">@f.Rating/5</span>
                                    </div>
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>@f.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                                    </small>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrWhiteSpace(f.Comment))
                            {
                                <div class="mt-3 p-3 bg-light rounded">
                                    <p class="mb-0" style="white-space: pre-wrap;">@f.Comment</p>
                                </div>
                            }
                            else
                            {
                                <div class="mt-3 p-3 bg-light rounded border border-dashed">
                                    <p class="mb-0 text-muted text-center fst-italic small">
                                        <i class="bi bi-chat-right-dots me-1"></i>No comment provided
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-chat-left-text text-muted mb-3" style="font-size: 4rem;"></i>
                <h4 class="text-muted mb-2">No Feedback Yet</h4>
                <p class="text-muted mb-0">Participants can submit feedback after attending the activity</p>
            </div>
        </div>
    }
</div>

<style>
.hover-card {
    transition: all 0.3s ease;
}
.hover-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
}
.border-dashed {
    border-style: dashed !important;
}
</style>



