@page "{activityId:int}"
@model WebFE.Pages.ClubManager.Activities.EvaluationDetailModel
@{
    ViewData["Title"] = "Evaluation Detail";
    ViewData["Breadcrumb"] = "Evaluation Detail";
    Layout = "~/Pages/Shared/_ClubManagerLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">Activity Evaluation Detail</h1>
        @if (Model.Evaluation != null)
        {
            <p class="page-description">@Model.Evaluation.ActivityTitle</p>
        }
    </div>
    <div class="d-flex gap-2">
        @if (Model.Evaluation != null)
        {
            <a href="/ClubManager/Activities/Evaluate/@Model.ActivityId" class="btn btn-primary">
                <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                Edit Evaluation
            </a>
        }
        <a href="/ClubManager/Activities/Details/@Model.ActivityId" class="btn btn-outline-secondary">
            <i data-lucide="arrow-left" style="width: 16px; height: 16px;"></i>
            Back to Activity
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i data-lucide="alert-circle" style="width: 16px; height: 16px;"></i>
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Evaluation != null)
{
    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Activity Information -->
            <div class="content-card mb-4">
                <div class="content-card-header">
                    <h5 class="content-card-title">Activity Information</h5>
                </div>
                <div class="content-card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p class="text-muted small mb-1">Activity</p>
                            <p class="mb-0"><strong>@Model.Evaluation.ActivityTitle</strong></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted small mb-1">Date</p>
                            <p class="mb-0">
                                @Model.Evaluation.ActivityStartTime.ToString("dd/MM/yyyy HH:mm") - 
                                @Model.Evaluation.ActivityEndTime.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Participant Count -->
            <div class="content-card mb-4">
                <div class="content-card-header">
                    <h5 class="content-card-title">Participant Count</h5>
                </div>
                <div class="content-card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p class="text-muted small mb-1">Expected (A)</p>
                            <p class="mb-0 fs-4"><strong>@Model.Evaluation.ExpectedParticipants</strong></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="text-muted small mb-1">Actual (B)</p>
                            <p class="mb-0 fs-4"><strong>@Model.Evaluation.ActualParticipants</strong></p>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Evaluation.Reason))
                    {
                        <div class="mt-3 p-3 bg-light rounded">
                            <p class="text-muted small mb-1">Reason</p>
                            <p class="mb-0">@Model.Evaluation.Reason</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Evaluation Scores -->
            <div class="content-card mb-4">
                <div class="content-card-header">
                    <h5 class="content-card-title">Evaluation Scores</h5>
                </div>
                <div class="content-card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <span class="text-muted">Communication</span>
                                <span class="fs-5"><strong>@Model.Evaluation.CommunicationScore</strong>/10</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <span class="text-muted">Organization</span>
                                <span class="fs-5"><strong>@Model.Evaluation.OrganizationScore</strong>/10</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <span class="text-muted">MC/Host</span>
                                <span class="fs-5"><strong>@Model.Evaluation.HostScore</strong>/10</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <span class="text-muted">Speaker/Performer</span>
                                <span class="fs-5"><strong>@Model.Evaluation.SpeakerScore</strong>/10</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Average Score -->
                    <div class="mt-4 p-4 bg-primary bg-opacity-10 rounded text-center">
                        <p class="text-muted small mb-2">Average Score</p>
                        <p class="mb-0 display-4 text-primary"><strong>@Model.Evaluation.AverageScore.ToString("F1")</strong></p>
                    </div>
                </div>
            </div>

            <!-- Evaluation Details -->
            <div class="content-card mb-4">
                <div class="content-card-header">
                    <h5 class="content-card-title">Evaluation Details</h5>
                </div>
                <div class="content-card-body">
                    <!-- Success -->
                    <div class="mb-4">
                        <p class="text-muted small mb-2"><strong>Success</strong></p>
                        <div class="p-3 bg-light rounded">
                            <p class="mb-0" style="white-space: pre-wrap;">@Model.Evaluation.Success</p>
                        </div>
                    </div>

                    <!-- Limitations -->
                    @if (!string.IsNullOrEmpty(Model.Evaluation.Limitations))
                    {
                        <div class="mb-4">
                            <p class="text-muted small mb-2"><strong>Limitations</strong></p>
                            <div class="p-3 bg-light rounded">
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.Evaluation.Limitations</p>
                            </div>
                        </div>
                    }

                    <!-- Improvement Measures -->
                    @if (!string.IsNullOrEmpty(Model.Evaluation.ImprovementMeasures))
                    {
                        <div class="mb-0">
                            <p class="text-muted small mb-2"><strong>Improvement Measures</strong></p>
                            <div class="p-3 bg-light rounded">
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.Evaluation.ImprovementMeasures</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Evaluation Info -->
            <div class="content-card mb-4">
                <div class="content-card-header">
                    <h5 class="content-card-title">Evaluation Information</h5>
                </div>
                <div class="content-card-body">
                    <div class="mb-3">
                        <p class="text-muted small mb-1">Evaluated by</p>
                        <p class="mb-0"><strong>@Model.Evaluation.CreatedByName</strong></p>
                    </div>
                    <div class="mb-3">
                        <p class="text-muted small mb-1">Evaluated at</p>
                        <p class="mb-0">@Model.Evaluation.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    @if (Model.Evaluation.UpdatedAt.HasValue)
                    {
                        <div class="mb-0">
                            <p class="text-muted small mb-1">Last updated</p>
                            <p class="mb-0">@Model.Evaluation.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="content-card">
                <div class="content-card-header">
                    <h5 class="content-card-title">Actions</h5>
                </div>
                <div class="content-card-body">
                    <div class="d-grid gap-2">
                        <a href="/ClubManager/Activities/Evaluate?id=@Model.ActivityId" class="btn btn-primary">
                            <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                            Edit Evaluation
                        </a>
                        <a href="/ClubManager/Activities/Details?id=@Model.ActivityId" class="btn btn-outline-secondary">
                            <i data-lucide="arrow-left" style="width: 16px; height: 16px;"></i>
                            Back to Activity
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="content-card">
        <div class="content-card-body text-center py-5">
            <i data-lucide="file-question" style="width: 64px; height: 64px;" class="text-muted mb-3"></i>
            <p class="text-muted">No evaluation found for this activity.</p>
            <a href="/ClubManager/Activities/Details?id=@Model.ActivityId" class="btn btn-outline-secondary mt-3">
                Back to Activity
            </a>
        </div>
    </div>
}

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
