@page "{clubId:int}/{semesterId:int}"
@using BusinessObject.DTOs.ClubMovementRecord
@model WebFE.Pages.ClubManager.ClubMovementScore.DetailModel
@{
    ViewData["Title"] = "Club Activity Score Details";
    Layout = "~/Pages/Shared/_ClubManagerLayout.cshtml";
}

<section class="container my-5">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">
        <div>
            <h1 class="fw-bold mb-1">Club Activity Score Details</h1>
            <p class="text-muted mb-0">View scores by group and criterion</p>
        </div>
        <a href="/ClubManager/ClubMovementScore?clubId=@Model.ClubId" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    @if (Model.Records.Any())
    {
        <!-- Summary -->
        <div class="card shadow-sm border-0 mb-4 @(Model.IsCurrentSemester ? "border border-warning" : string.Empty)">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-lg-8">
                        <h5 class="fw-semibold mb-3">@Model.SemesterName</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="small text-muted">Club name</div>
                                <div class="fw-semibold">@Model.ClubName</div>
                                <div class="small text-muted mt-2">President</div>
                                <div class="fw-semibold">@Model.PresidentName (@Model.PresidentCode)</div>
                            </div>
                            <div class="col-md-6">
                                <div class="small text-muted">Total months</div>
                                <div class="fw-semibold">@Model.Records.Count months</div>
                                <div class="small text-muted mt-2">Total criteria</div>
                                <div class="fw-semibold">@Model.TotalCriteria criteria</div>
                                @if (Model.IsCurrentSemester)
                                {
                                    <div class="mt-3">
                                        <span class="badge bg-warning text-dark"><i class="bi bi-star-fill me-1"></i>Current semester</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        @{
                            var percent = (Model.TotalScore / 100.0) * 100.0;
                            var cls = percent >= 80 ? "success" : percent >= 60 ? "warning" : "danger";
                        }
                        <div class="text-muted">Total score (Semester)</div>
                        <div class="display-6 fw-bold text-primary">@Model.TotalScore.ToString("F1")</div>
                        <small class="text-muted">/ 100</small>
                        <div class="progress mt-2" style="height:10px;">
                            <div class="progress-bar bg-@cls" style="width:@percent%" role="progressbar"></div>
                        </div>
                        <small class="text-muted">@percent.ToString("F1")% completed</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scores by Month -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white border-0 pt-4">
                <h5 class="mb-0 fw-semibold"><i class="bi bi-calendar-month me-1"></i> Scores by Month</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var record in Model.Records.OrderBy(r => r.Month))
                    {
                        var monthName = new DateTime(2000, record.Month, 1).ToString("MMMM");
                        var monthPercent = (record.TotalScore / 100.0) * 100.0;
                        var monthClass = monthPercent >= 80 ? "success" : monthPercent >= 60 ? "warning" : "danger";
                        <div class="col-md-3">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body">
                                    <h6 class="mb-2">@monthName</h6>
                                    <div class="fw-bold text-primary fs-4">@record.TotalScore.ToString("F1")</div>
                                    <small class="text-muted">/ 100</small>
                                    <div class="progress mt-2" style="height:8px;">
                                        <div class="progress-bar bg-@monthClass" style="width:@monthPercent%" role="progressbar"></div>
                                    </div>
                                    <small class="text-muted d-block mt-2">@record.Details.Count criteria</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Category Scores (Total for Semester) -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white border-0 pt-4">
                <h5 class="mb-0 fw-semibold"><i class="bi bi-bar-chart me-1"></i> Total Scores by Category (Semester)</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @{
                        var totalClubMeeting = Model.Records.Sum(r => r.ClubMeetingScore);
                        var totalEvent = Model.Records.Sum(r => r.EventScore);
                        var totalCollaboration = Model.Records.Sum(r => r.CollaborationScore);
                        var totalCompetition = Model.Records.Sum(r => r.CompetitionScore);
                        var totalPlan = Model.Records.Sum(r => r.PlanScore);
                    }
                    <div class="col-md-2">
                        <div class="p-3 border rounded text-center">
                            <div class="text-muted small">Meetings</div>
                            <div class="fs-5 fw-bold text-primary">@totalClubMeeting.ToString("F1")</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="p-3 border rounded text-center">
                            <div class="text-muted small">Events</div>
                            <div class="fs-5 fw-bold text-primary">@totalEvent.ToString("F1")</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="p-3 border rounded text-center">
                            <div class="text-muted small">Collaborations</div>
                            <div class="fs-5 fw-bold text-primary">@totalCollaboration.ToString("F1")</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="p-3 border rounded text-center">
                            <div class="text-muted small">Competitions</div>
                            <div class="fs-5 fw-bold text-primary">@totalCompetition.ToString("F1")</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="p-3 border rounded text-center">
                            <div class="text-muted small">Plans</div>
                            <div class="fs-5 fw-bold text-primary">@totalPlan.ToString("F1")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details by Month -->
        @foreach (var record in Model.Records.OrderBy(r => r.Month))
        {
            var monthName = new DateTime(2000, record.Month, 1).ToString("MMMM");
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold"><i class="bi bi-list-check me-1"></i> @monthName - Details by criterion</h5>
                </div>
                <div class="card-body pt-0">
                    @if (record.Details.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Criterion group</th>
                                        <th>Criterion</th>
                                        <th class="text-center">Max score</th>
                                        <th class="text-center">Score achieved</th>
                                        <th>Date awarded</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in record.Details.OrderBy(x => x.GroupName).ThenBy(x => x.CriterionTitle))
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">@d.GroupName</span></td>
                                            <td class="fw-semibold">@d.CriterionTitle</td>
                                            <td class="text-center">@d.CriterionMaxScore</td>
                                            <td class="text-center">
                                                <div class="fw-semibold">@d.Score.ToString("F1")</div>
                                            </td>
                                            <td>@d.AwardedAt.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-inbox" style="font-size:2rem; color:#9ca3af;"></i>
                            <p class="text-muted mt-2 mb-0">No detailed scores for this month</p>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Summary by Group (Total for Semester) -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 pt-4">
                <h5 class="mb-0 fw-semibold"><i class="bi bi-bar-chart-line me-1"></i> Summary by Criterion Group (Semester Total)</h5>
            </div>
            <div class="card-body">
                @{
                    var allDetails = Model.Records.SelectMany(r => r.Details).ToList();
                    if (allDetails.Any())
                    {
                        var groups = allDetails
                            .GroupBy(g => g.GroupName)
                            .Select(g => new { Group = g.Key, Score = g.Sum(x => x.Score), Count = g.Count() })
                            .OrderByDescending(x => x.Score);
                        <div class="row">
                            @foreach (var g in groups)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body">
                                            <h6 class="mb-1">@g.Group</h6>
                                            <div class="fw-bold text-primary fs-5">@g.Score.ToString("F1") points</div>
                                            <small class="text-muted">@g.Count criteria achieved</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size:3rem; color:#9ca3af;"></i>
                            <p class="text-muted mt-3 mb-0">No detailed scores yet</p>
                        </div>
                    }
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning shadow-sm">
            <i class="bi bi-exclamation-triangle me-2"></i> No club activity score records found for this semester.
        </div>
    }
</section>
