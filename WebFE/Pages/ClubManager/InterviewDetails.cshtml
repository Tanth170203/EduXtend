@page "{requestId:int}"
@model WebFE.Pages.ClubManager.InterviewDetailsModel
@{
    ViewData["Title"] = "Interview Details";
    ViewData["Breadcrumb"] = "Interview Details";
    Layout = "~/Pages/Shared/_ClubManagerLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">Interview Details</h1>
                <p class="page-description">Review interview and submit evaluation</p>
            </div>
            <a href="/ClubManager/Requests" class="btn btn-outline-secondary">
                <i data-lucide="arrow-left" style="width: 16px; height: 16px;"></i>
                Back to Requests
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Interview Information -->
        <div class="col-lg-8">
            <div class="content-card mb-4">
                <div class="content-card-header">
                    <h2 class="content-card-title">
                        <i data-lucide="calendar" style="width: 20px; height: 20px;"></i>
                        Interview Schedule
                    </h2>
                </div>
                <div class="content-card-body">
                    <div id="interviewInfo">
                        <div class="text-center py-5">
                            <span class="spinner-border text-primary"></span>
                            <p class="mt-2 text-muted">Loading interview details...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Interview Form -->
            <div class="content-card mb-4" id="editInterviewCard" style="display: none;">
                <div class="content-card-header">
                    <h2 class="content-card-title">
                        <i data-lucide="edit" style="width: 20px; height: 20px;"></i>
                        Edit Interview Schedule
                    </h2>
                </div>
                <div class="content-card-body">
                    <form id="editInterviewForm">
                        <div class="mb-3">
                            <label for="editScheduledDate" class="form-label">Interview Date & Time *</label>
                            <input type="datetime-local" class="form-control" id="editScheduledDate" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Interview Type *</label>
                            <div class="d-flex gap-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="editInterviewType" id="editTypeOnline" value="Online">
                                    <label class="form-check-label" for="editTypeOnline">
                                        <i data-lucide="video" style="width: 16px; height: 16px;"></i> Online (Google Meet)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="editInterviewType" id="editTypeOffline" value="Offline" checked>
                                    <label class="form-check-label" for="editTypeOffline">
                                        <i data-lucide="map-pin" style="width: 16px; height: 16px;"></i> Offline (In-person)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3" id="editLocationGroup">
                            <label for="editLocation" class="form-label" id="editLocationLabel">Location *</label>
                            <input type="text" class="form-control" id="editLocation" placeholder="e.g. Room 101, Building A" maxlength="500" required />
                            <div class="form-text" id="editLocationHelp">Physical location for the interview</div>
                            
                            <!-- Map Picker for Offline Interview -->
                            <div id="editMapPickerContainer" style="display: none;" class="mt-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <label class="form-label mb-0">Select Location on Map (Optional)</label>
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="useCurrentLocation()">
                                        <i data-lucide="navigation" style="width: 14px; height: 14px;"></i>
                                        Use My Location
                                    </button>
                                </div>
                                <div id="editMapPicker" style="height: 300px; border-radius: 8px; overflow: hidden;"></div>
                                <div class="form-text mt-2">
                                    Click on the map to select interview location. Coordinates: 
                                    <span id="editMapCoords" class="text-muted">Not selected</span>
                                </div>
                                <input type="hidden" id="editGpsLatitude" />
                                <input type="hidden" id="editGpsLongitude" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="editNotes" class="form-label">Notes (Optional)</label>
                            <textarea class="form-control" id="editNotes" rows="3" placeholder="Any additional information for the applicant..." maxlength="1000"></textarea>
                        </div>

                        <div class="alert alert-warning">
                            <i data-lucide="alert-triangle" style="width: 16px; height: 16px;"></i>
                            The student will be notified about the schedule change.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" id="updateInterviewBtn">
                                <i data-lucide="save" style="width: 16px; height: 16px;"></i>
                                Update Interview
                            </button>
                            <button type="button" class="btn btn-secondary" onclick="cancelEditInterview()">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Evaluation Form -->
            <div class="content-card" id="evaluationCard" style="display: none;">
                <div class="content-card-header">
                    <h2 class="content-card-title">
                        <i data-lucide="file-text" style="width: 20px; height: 20px;"></i>
                        Interview Evaluation
                    </h2>
                </div>
                <div class="content-card-body">
                    <form id="evaluationForm">
                        <div class="mb-4">
                            <label for="evaluation" class="form-label fw-semibold">
                                Evaluation & Notes *
                            </label>
                            <textarea class="form-control" id="evaluation" rows="8" maxlength="2000" placeholder="Write your evaluation of the interview..." required></textarea>
                            <div class="form-text">
                                <span id="evalCharCount">0</span>/2000 characters
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i data-lucide="info" style="width: 16px; height: 16px;"></i>
                            After submitting your evaluation, you can approve or reject the application.
                        </div>

                        <button type="submit" class="btn btn-primary" id="submitEvalBtn">
                            <i data-lucide="save" style="width: 16px; height: 16px;"></i>
                            Submit Evaluation
                        </button>
                    </form>
                </div>
            </div>

            <!-- Decision Buttons -->
            <div class="content-card mt-4" id="decisionCard" style="display: none;">
                <div class="content-card-header">
                    <h2 class="content-card-title">
                        <i data-lucide="check-square" style="width: 20px; height: 20px;"></i>
                        Final Decision
                    </h2>
                </div>
                <div class="content-card-body">
                    <p class="text-muted mb-3">Based on your evaluation, make a final decision:</p>
                    <div class="d-flex gap-3">
                        <button class="btn btn-success btn-lg" onclick="processRequest('Approve')">
                            <i data-lucide="check-circle" style="width: 20px; height: 20px;"></i>
                            Approve Application
                        </button>
                        <button class="btn btn-danger btn-lg" onclick="processRequest('Reject')">
                            <i data-lucide="x-circle" style="width: 20px; height: 20px;"></i>
                            Reject Application
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Applicant Information -->
        <div class="col-lg-4">
            <div class="content-card">
                <div class="content-card-header">
                    <h2 class="content-card-title">
                        <i data-lucide="user" style="width: 20px; height: 20px;"></i>
                        Applicant Information
                    </h2>
                </div>
                <div class="content-card-body">
                    <div id="applicantInfo">
                        <div class="text-center py-3">
                            <span class="spinner-border spinner-border-sm text-primary"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Leaflet CSS and JS for Map -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <script>
        lucide.createIcons();

        const requestId = @Model.RequestId;
        let interviewId = null;
        let hasEvaluation = false;
        let currentInterview = null;
        let editMap = null;
        let editMarker = null;

        document.addEventListener('DOMContentLoaded', async () => {
            await loadInterviewData();
        });

        async function loadInterviewData() {
            try {
                // Get interview by join request ID
                const response = await fetch(`https://localhost:5001/api/interview/request/${requestId}`, {
                    credentials: 'include'
                });

                if (response.ok) {
                    const interview = await response.json();
                    interviewId = interview.id;
                    currentInterview = interview;
                    hasEvaluation = interview.evaluation != null && interview.evaluation.trim() !== '';
                    displayInterviewInfo(interview);
                    displayApplicantInfo(interview);

                    // Show evaluation form only if interview is not completed yet
                    if (interview.status !== 'Completed') {
                        document.getElementById('evaluationCard').style.display = 'block';
                    } else {
                        // Show decision buttons if interview is completed
                        document.getElementById('decisionCard').style.display = 'block';
                    }

                    lucide.createIcons();
                } else if (response.status === 404) {
                    document.getElementById('interviewInfo').innerHTML = `
                        <div class="alert alert-warning">
                            <i data-lucide="alert-triangle" style="width: 20px; height: 20px;"></i>
                            <strong>No interview scheduled yet.</strong> Please go back and schedule an interview first.
                        </div>
                    `;
                    lucide.createIcons();
                } else {
                    throw new Error('Failed to load interview');
                }
            } catch (error) {
                console.error('Error loading interview:', error);
                document.getElementById('interviewInfo').innerHTML = `
                    <div class="alert alert-danger">
                        <i data-lucide="x-circle" style="width: 20px; height: 20px;"></i>
                        Failed to load interview details. Please try again.
                    </div>
                `;
                lucide.createIcons();
            }
        }

        function displayInterviewInfo(interview) {
            const scheduledDate = new Date(interview.scheduledDate).toLocaleString('vi-VN');
            const status = interview.status;
            const statusClass = status === 'Completed' ? 'success' : 'warning';
            const interviewType = interview.interviewType || 'Offline';
            const isOnline = interviewType === 'Online';

            let html = `
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Scheduled Date & Time</label>
                        <p class="fw-semibold"><i data-lucide="calendar" style="width: 16px; height: 16px;"></i> ${scheduledDate}</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Interview Type</label>
                        <p class="fw-semibold">
                            <i data-lucide="${isOnline ? 'video' : 'map-pin'}" style="width: 16px; height: 16px;"></i> 
                            <span class="badge bg-${isOnline ? 'info' : 'secondary'}">${interviewType}</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">${isOnline ? 'Meeting Link' : 'Location'}</label>
                        <p class="fw-semibold">
                            ${isOnline 
                                ? `<a href="${interview.location}" target="_blank" class="btn btn-sm btn-primary"><i data-lucide="video" style="width: 14px; height: 14px;"></i> Join Google Meet</a>`
                                : `<i data-lucide="map-pin" style="width: 16px; height: 16px;"></i> ${interview.location}`
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Status</label>
                        <p><span class="badge bg-${statusClass}">${status}</span></p>
                    </div>
            `;

            // Add map for offline interviews with GPS coordinates
            if (!isOnline && interview.latitude && interview.longitude) {
                html += `
                    <div class="col-12">
                        <label class="form-label text-muted small">Interview Location on Map</label>
                        <div id="viewMap" style="height: 300px; border-radius: 8px; overflow: hidden; border: 1px solid #dee2e6;"></div>
                        <div class="form-text mt-2">
                            <i data-lucide="map-pin" style="width: 14px; height: 14px;"></i>
                            Coordinates: ${interview.latitude}, ${interview.longitude}
                        </div>
                    </div>
                `;
            }

            if (interview.notes) {
                html += `
                    <div class="col-12">
                        <label class="form-label text-muted small">Notes</label>
                        <p class="border p-3 rounded bg-light">${interview.notes}</p>
                    </div>
                `;
            }

            if (hasEvaluation) {
                html += `
                    <div class="col-12">
                        <label class="form-label text-muted small">Your Evaluation</label>
                        <p class="border p-3 rounded bg-light">${interview.evaluation}</p>
                    </div>
                `;
            }

            // Add Edit button if not completed
            if (status !== 'Completed') {
                html += `
                    <div class="col-12">
                        <button class="btn btn-outline-primary" onclick="showEditInterview()">
                            <i data-lucide="edit" style="width: 16px; height: 16px;"></i>
                            Edit Interview Schedule
                        </button>
                    </div>
                `;
            }

            html += `</div>`;
            document.getElementById('interviewInfo').innerHTML = html;
            
            // Initialize view map if GPS coordinates exist
            if (!isOnline && interview.latitude && interview.longitude) {
                setTimeout(() => initViewMap(interview.latitude, interview.longitude), 100);
            }
        }
        
        function initViewMap(lat, lng) {
            // Create read-only map
            const viewMap = L.map('viewMap', {
                dragging: true,
                touchZoom: true,
                scrollWheelZoom: true,
                doubleClickZoom: true,
                boxZoom: true,
                keyboard: true,
                zoomControl: true
            }).setView([lat, lng], 15);
            
            // Add OpenStreetMap tiles
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(viewMap);
            
            // Add marker at interview location
            const marker = L.marker([lat, lng]).addTo(viewMap);
            marker.bindPopup('<b>Interview Location</b>').openPopup();
        }

        function displayApplicantInfo(interview) {
            const cvButton = interview.cvUrl 
                ? `<button class="btn btn-sm btn-outline-success w-100 mb-2" onclick="viewCV('${interview.cvUrl}', '${interview.userName}')">
                       <i data-lucide="file-text" style="width: 14px; height: 14px;"></i>
                       View CV
                   </button>`
                : '';
            
            const html = `
                <div class="mb-3">
                    <label class="form-label text-muted small">Name</label>
                    <p class="fw-semibold">${interview.userName}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted small">Email</label>
                    <p>${interview.userEmail}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted small">Club</label>
                    <p class="fw-semibold">${interview.clubName}</p>
                </div>
                ${cvButton}
                <a href="/ClubManager/Requests" class="btn btn-sm btn-outline-primary w-100">
                    <i data-lucide="file-text" style="width: 14px; height: 14px;"></i>
                    Back to list Application
                </a>
            `;
            document.getElementById('applicantInfo').innerHTML = html;
            lucide.createIcons();
        }
        
        // View CV function
        window.viewCV = function(cvUrl, studentName) {
            if (window.cvViewer) {
                window.cvViewer.showCV(cvUrl, { title: `CV - ${studentName}` });
            } else {
                // Fallback: open in new tab
                window.open(cvUrl, '_blank');
            }
        };

        // Show edit interview form
        window.showEditInterview = function() {
            if (!currentInterview) return;
            
            // Populate form with current data
            const scheduledDate = new Date(currentInterview.scheduledDate);
            const localDateTime = new Date(scheduledDate.getTime() - scheduledDate.getTimezoneOffset() * 60000).toISOString().slice(0, 16);
            document.getElementById('editScheduledDate').value = localDateTime;
            
            // Set interview type
            const interviewType = currentInterview.interviewType || 'Offline';
            if (interviewType === 'Online') {
                document.getElementById('editTypeOnline').checked = true;
            } else {
                document.getElementById('editTypeOffline').checked = true;
            }
            
            // Set location (for both online and offline)
            document.getElementById('editLocation').value = currentInterview.location || '';
            
            document.getElementById('editNotes').value = currentInterview.notes || '';
            
            // Setup interview type change handler
            setupEditInterviewTypeHandler();
            toggleEditLocationField();
            
            // Hide interview info, show edit form
            document.getElementById('interviewInfo').style.display = 'none';
            document.getElementById('editInterviewCard').style.display = 'block';
            document.getElementById('evaluationCard').style.display = 'none';
            
            lucide.createIcons();
        };

        function setupEditInterviewTypeHandler() {
            const typeRadios = document.querySelectorAll('input[name="editInterviewType"]');
            typeRadios.forEach(radio => {
                radio.addEventListener('change', toggleEditLocationField);
            });
        }

        function toggleEditLocationField() {
            const isOnline = document.getElementById('editTypeOnline').checked;
            const locationInput = document.getElementById('editLocation');
            const locationLabel = document.getElementById('editLocationLabel');
            const locationHelp = document.getElementById('editLocationHelp');
            const mapPickerContainer = document.getElementById('editMapPickerContainer');
            
            if (isOnline) {
                // Online: Ask for Google Meet link, hide map
                locationLabel.textContent = 'Google Meet Link *';
                locationInput.placeholder = 'e.g. https://meet.google.com/abc-defg-hij';
                locationHelp.textContent = 'Create a Google Meet link and paste it here';
                mapPickerContainer.style.display = 'none';
                
                // Clear GPS coordinates
                document.getElementById('editGpsLatitude').value = '';
                document.getElementById('editGpsLongitude').value = '';
                
                // Destroy map if exists
                if (editMap) {
                    editMap.remove();
                    editMap = null;
                    editMarker = null;
                }
            } else {
                // Offline: Ask for physical location, show map
                locationLabel.textContent = 'Location *';
                locationInput.placeholder = 'e.g. Room 101, Building A';
                locationHelp.textContent = 'Physical location for the interview';
                mapPickerContainer.style.display = 'block';
                
                // Initialize map if not exists
                if (!editMap) {
                    initEditMap();
                }
            }
            lucide.createIcons();
        }
        
        function initEditMap() {
            // Default to Da Nang
            const defaultLat = 16.047079;
            const defaultLng = 108.206230;
            
            // Get initial coordinates from current interview if available
            let initialLat = defaultLat;
            let initialLng = defaultLng;
            
            if (currentInterview && currentInterview.latitude && currentInterview.longitude) {
                initialLat = currentInterview.latitude;
                initialLng = currentInterview.longitude;
            }
            
            // Create map
            editMap = L.map('editMapPicker').setView([initialLat, initialLng], 13);
            
            // Add OpenStreetMap tiles
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(editMap);
            
            // Add marker if coordinates exist
            if (currentInterview && currentInterview.latitude && currentInterview.longitude) {
                setEditMapLocation(initialLat, initialLng);
            }
            
            // Handle map click
            editMap.on('click', function(e) {
                setEditMapLocation(e.latlng.lat, e.latlng.lng);
            });
        }
        
        function setEditMapLocation(lat, lng) {
            // Remove existing marker
            if (editMarker) {
                editMap.removeLayer(editMarker);
            }
            
            // Add new marker
            editMarker = L.marker([lat, lng], {
                draggable: true
            }).addTo(editMap);
            
            // Handle marker drag
            editMarker.on('dragend', function(e) {
                const position = e.target.getLatLng();
                setEditMapLocation(position.lat, position.lng);
            });
            
            // Update hidden inputs
            document.getElementById('editGpsLatitude').value = lat.toFixed(6);
            document.getElementById('editGpsLongitude').value = lng.toFixed(6);
            
            // Update display
            document.getElementById('editMapCoords').textContent = `${lat.toFixed(6)}, ${lng.toFixed(6)}`;
            
            // Reverse geocode to get address
            fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}&accept-language=vi`)
                .then(response => response.json())
                .then(data => {
                    if (data.display_name) {
                        document.getElementById('editLocation').value = data.display_name;
                    }
                })
                .catch(error => {
                    console.log('Reverse geocoding failed:', error);
                });
            
            // Center map on marker
            editMap.setView([lat, lng], editMap.getZoom());
        }
        
        window.useCurrentLocation = function() {
            if (!navigator.geolocation) {
                alert('Geolocation is not supported by your browser');
                return;
            }
            
            navigator.geolocation.getCurrentPosition(
                function(position) {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    setEditMapLocation(lat, lng);
                    editMap.setView([lat, lng], 15);
                },
                function(error) {
                    console.error('Error getting location:', error);
                    alert('Unable to get your location. Please select manually on the map.');
                }
            );
        };

        // Cancel edit interview
        window.cancelEditInterview = function() {
            document.getElementById('interviewInfo').style.display = 'block';
            document.getElementById('editInterviewCard').style.display = 'none';
            if (!hasEvaluation) {
                document.getElementById('evaluationCard').style.display = 'block';
            }
        };

        // Handle edit interview form submission
        const editInterviewForm = document.getElementById('editInterviewForm');
        if (editInterviewForm) {
            editInterviewForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const scheduledDate = document.getElementById('editScheduledDate').value;
                const interviewType = document.querySelector('input[name="editInterviewType"]:checked').value;
                const location = document.getElementById('editLocation').value;
                const notes = document.getElementById('editNotes').value;

                if (!scheduledDate) {
                    alert('Please fill in all required fields');
                    return;
                }

                // Validate location for both Online and Offline
                if (!location.trim()) {
                    const errorMsg = interviewType === 'Online' 
                        ? 'Please enter a Google Meet link for online interview'
                        : 'Please enter a location for offline interview';
                    alert(errorMsg);
                    return;
                }

                const updateBtn = document.getElementById('updateInterviewBtn');
                updateBtn.disabled = true;
                updateBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Updating...';

                try {
                    // Get GPS coordinates if available
                    const gpsLat = document.getElementById('editGpsLatitude').value;
                    const gpsLng = document.getElementById('editGpsLongitude').value;
                    
                    const payload = {
                        scheduledDate: new Date(scheduledDate).toISOString(),
                        interviewType: interviewType,
                        location: location.trim(), // Send location for both Online and Offline
                        notes: notes ? notes.trim() : null,
                        latitude: gpsLat ? parseFloat(gpsLat) : null,
                        longitude: gpsLng ? parseFloat(gpsLng) : null
                    };

                    const response = await fetch(`https://localhost:5001/api/interview/${interviewId}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        credentials: 'include',
                        body: JSON.stringify(payload)
                    });

                    if (response.ok) {
                        alert('Interview schedule updated successfully! The student will be notified.');
                        window.location.reload();
                    } else {
                        const errorText = await response.text();
                        let errorMessage = 'Failed to update interview';
                        try {
                            const error = JSON.parse(errorText);
                            errorMessage = error.message || errorMessage;
                        } catch (e) {
                            errorMessage = errorText || errorMessage;
                        }
                        alert('Error: ' + errorMessage);
                        updateBtn.disabled = false;
                        updateBtn.innerHTML = '<i data-lucide="save" style="width: 16px; height: 16px;"></i> Update Interview';
                        lucide.createIcons();
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred: ' + error.message);
                    updateBtn.disabled = false;
                    updateBtn.innerHTML = '<i data-lucide="save" style="width: 16px; height: 16px;"></i> Update Interview';
                    lucide.createIcons();
                }
            });
        }

        // Character counter
        const evaluationInput = document.getElementById('evaluation');
        const evalCharCount = document.getElementById('evalCharCount');
        if (evaluationInput) {
            evaluationInput.addEventListener('input', () => {
                evalCharCount.textContent = evaluationInput.value.length;
            });
        }

        // Submit evaluation
        document.getElementById('evaluationForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const evaluation = evaluationInput.value.trim();
            if (!evaluation) {
                alert('Please write an evaluation');
                return;
            }

            const submitBtn = document.getElementById('submitEvalBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Submitting...';

            try {
                const response = await fetch(`https://localhost:5001/api/interview/${interviewId}/evaluation`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({ evaluation })
                });

                if (response.ok) {
                    alert('Evaluation submitted successfully!');
                    window.location.reload();
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.message || 'Failed to submit evaluation'));
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i data-lucide="save" style="width: 16px; height: 16px;"></i> Submit Evaluation';
                    lucide.createIcons();
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i data-lucide="save" style="width: 16px; height: 16px;"></i> Submit Evaluation';
                lucide.createIcons();
            }
        });

        // Process request (Approve/Reject)
        window.processRequest = async function(action) {
            const confirmMsg = action === 'Approve'
                ? 'Approve this application? The student will be added to your club.'
                : 'Reject this application? This action cannot be undone.';

            if (!confirm(confirmMsg)) return;

            const decisionCard = document.getElementById('decisionCard');
            decisionCard.innerHTML = '<div class="text-center py-3"><span class="spinner-border text-primary"></span><p class="mt-2">Processing...</p></div>';

            try {
                const response = await fetch(`https://localhost:5001/api/joinrequest/${requestId}/process`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({ action })
                });

                if (response.ok) {
                    alert(`Application ${action.toLowerCase()}d successfully!`);
                    window.location.href = '/ClubManager/Requests';
                } else {
                    const error = await response.json();
                    alert('Error: ' + (error.message || 'Failed to process request'));
                    window.location.reload();
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
                window.location.reload();
            }
        };

        lucide.createIcons();
    </script>
