@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="min-h-screen">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-background">
            <img src="https://images.unsplash.com/photo-1632834380561-d1e05839a33a?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHx1bml2ZXJzaXR5JTIwc3R1ZGVudHMlMjBjYW1wdXN8ZW58MXx8fHwxNzU5NTI3NTkxfDA&ixlib=rb-4.1.0&q=80&w=1080"
                 alt="University Campus"
                 class="hero-image"
                 onerror="this.onerror=null; this.src='https://via.placeholder.com/1920x1080/003366/FFFFFF?text=EduXtend'" />
            <div class="hero-overlay"></div>
        </div>
        <div class="hero-content">
            <div class="container-custom">
                <div class="text-white" style="max-width: 42rem;">
                    <h1 style="font-size: 3rem; margin-bottom: 1.5rem; color: white;">EduXtend</h1>
                    <p style="font-size: 1.5rem; margin-bottom: 2rem; color: white;">
                        Training Points & Club Management
                    </p>
                    <p style="font-size: 1.125rem; margin-bottom: 2rem; color: #f3f4f6;">
                        A transparent, convenient platform for managing student activities and training points,
                        helping you develop academically and build soft skills.
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <a href="/Clubs" class="btn-lg" style="background-color: white; color: var(--primary); padding: 1rem 2rem; border-radius: var(--radius); text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem;">
                            Explore Clubs
                            <i data-lucide="arrow-right" style="width: 20px; height: 20px;"></i>
                        </a>
                        <a href="/Activities" class="btn-outline btn-lg" style="border-color: white; color: white; padding: 1rem 2rem; border-radius: var(--radius); text-decoration: none; display: inline-flex; align-items: center;">
                            View Activities
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container-custom">
            <div class="grid grid-cols-4">
                @foreach (var stat in Model.Stats)
                {
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i data-lucide="@stat.Icon" style="width: 2rem; height: 2rem; color: var(--primary);"></i>
                        </div>
                        <div class="stat-value">@stat.Value</div>
                        <div class="stat-label">@stat.Label</div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Featured Clubs Section -->
    <section class="section">
        <div class="container-custom">
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h2 class="section-title">Featured Clubs</h2>
                    <p class="section-description">
                        Discover and join clubs that match your passions
                    </p>
                </div>
                <a href="/Clubs" class="btn-outline">
                    View all
                    <i data-lucide="arrow-right" style="width: 16px; height: 16px;"></i>
                </a>
            </div>
            <div class="grid grid-cols-3">
                @foreach (var club in Model.FeaturedClubs)
                {
                    <div class="card" style="cursor: pointer;">
                        <div class="aspect-video">
                            <img src="@club.Image"
                                 alt="@club.Name"
                                 style="width: 100%; height: 100%; object-fit: cover;"
                                 onerror="this.onerror=null; this.src='https://via.placeholder.com/400x225/003366/FFFFFF?text=@club.Name'" />
                            <span class="badge image-badge" style="background-color: white; color: var(--primary);">
                                @club.Category
                            </span>
                        </div>
                        <div class="card-header">
                            <h3 class="card-title">@club.Name</h3>
                            <p class="card-description">@club.Description</p>
                        </div>
                        <div class="card-content">
                            <div class="flex items-center gap-2" style="font-size: 0.875rem; color: var(--muted-foreground);">
                                <i data-lucide="users" style="width: 16px; height: 16px;"></i>
                                <span>@club.Members members</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Training Points Evaluation System -->
    <section class="section gradient-accent">
        <div class="container-custom">
            <div class="text-center mb-12">
                <span class="badge mb-4">Training Points System</span>
                <h2 class="section-title" style="margin-bottom: 1rem;">Transparent training points evaluation</h2>
                <p class="section-description max-w-2xl mx-auto">
                    4-level evaluation process: Student self-assessment, Class representative confirmation,
                    Advisor approval, and Student Affairs final approval
                </p>
            </div>

            <div class="grid grid-cols-4 mb-8">
                <div class="card text-center">
                    <div class="card-header">
                        <div class="mx-auto bg-blue-100" style="width: 4rem; height: 4rem; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                            <i data-lucide="file-check" class="icon-blue" style="width: 2rem; height: 2rem;"></i>
                        </div>
                        <h4 class="card-title" style="font-size: 1.125rem;">Student</h4>
                    </div>
                    <div class="card-content">
                        <p style="font-size: 0.875rem; color: var(--muted-foreground);">
                            Self-assess and submit evidence for each criterion
                        </p>
                    </div>
                </div>

                <div class="card text-center">
                    <div class="card-header">
                        <div class="mx-auto bg-green-100" style="width: 4rem; height: 4rem; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                            <i data-lucide="users" class="icon-green" style="width: 2rem; height: 2rem;"></i>
                        </div>
                        <h4 class="card-title" style="font-size: 1.125rem;">Class Representative</h4>
                    </div>
                    <div class="card-content">
                        <p style="font-size: 0.875rem; color: var(--muted-foreground);">
                            Review and confirm scores based on actual participation
                        </p>
                    </div>
                </div>

                <div class="card text-center">
                    <div class="card-header">
                        <div class="mx-auto bg-purple-100" style="width: 4rem; height: 4rem; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                            <i data-lucide="graduation-cap" class="icon-purple" style="width: 2rem; height: 2rem;"></i>
                        </div>
                        <h4 class="card-title" style="font-size: 1.125rem;">Advisor</h4>
                    </div>
                    <div class="card-content">
                        <p style="font-size: 0.875rem; color: var(--muted-foreground);">
                            Review, approve, or request changes
                        </p>
                    </div>
                </div>

                <div class="card text-center">
                    <div class="card-header">
                        <div class="mx-auto bg-orange-100" style="width: 4rem; height: 4rem; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                            <i data-lucide="shield" class="icon-orange" style="width: 2rem; height: 2rem;"></i>
                        </div>
                        <h4 class="card-title" style="font-size: 1.125rem;">Student Affairs Office</h4>
                    </div>
                    <div class="card-content">
                        <p style="font-size: 0.875rem; color: var(--muted-foreground);">
                            Final approval and official record
                        </p>
                    </div>
                </div>
            </div>

<div class="text-center">
                <a href="/Evaluation" class="btn-primary btn-lg">
                    <i data-lucide="award" style="width: 20px; height: 20px;"></i>
                    Explore the evaluation system
                    <i data-lucide="arrow-right" style="width: 20px; height: 20px;"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Upcoming Activities Section -->
    <section class="section" style="background-color: white;">
        <div class="container-custom">
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h2 class="section-title">Upcoming Activities</h2>
                    <p class="section-description">
                        Register to earn training points
                    </p>
                </div>
                <a href="/Activities" class="btn-outline">
                    View all
                    <i data-lucide="arrow-right" style="width: 16px; height: 16px;"></i>
                </a>
            </div>
            <div class="grid grid-cols-3">
                @foreach (var activity in Model.UpcomingActivities)
                {
                    <div class="card" style="cursor: pointer;">
                        <div class="aspect-video">
                            <img src="@activity.Image"
                                 alt="@activity.Title"
                                 style="width: 100%; height: 100%; object-fit: cover;"
                                 onerror="this.onerror=null; this.src='https://via.placeholder.com/400x225/007ACC/FFFFFF?text=@activity.Title'" />
                            <span class="badge badge-secondary image-badge">
                                +@activity.Points points
                            </span>
                        </div>
                        <div class="card-header">
                            <div class="mb-2">
                                <span class="badge badge-outline">@activity.Type</span>
                            </div>
                            <h3 class="card-title">@activity.Title</h3>
                        </div>
                        <div class="card-content space-y-2">
                            <div class="flex items-center gap-2" style="font-size: 0.875rem; color: var(--muted-foreground);">
                                <i data-lucide="calendar" style="width: 16px; height: 16px;"></i>
                                <span>@activity.Date</span>
                            </div>
                            <div class="flex items-center gap-2" style="font-size: 0.875rem; color: var(--muted-foreground);">
                                <i data-lucide="map-pin" style="width: 16px; height: 16px;"></i>
                                <span>@activity.Location</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section gradient-primary">
        <div class="cta-content">
            <h2 style="font-size: 2.25rem; color: white; margin-bottom: 1rem;">
                Start your journey today
            </h2>
            <p style="font-size: 1.25rem; color: #f3f4f6; margin-bottom: 2rem;">
                Join thousands of students developing skills and gaining experience
            </p>
            <a href="/Auth/Login" class="btn-lg" style="background-color: white; color: var(--primary); padding: 1rem 2rem; border-radius: var(--radius); text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem;">
                Sign up now
                <i data-lucide="arrow-right" style="width: 20px; height: 20px;"></i>
            </a>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        // Reinitialize Lucide icons after page load
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}
