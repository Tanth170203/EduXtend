<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="referrer" content="no-referrer" />
    <title>@ViewData["Title"] - Club Manager - EduXtend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/eduxtend.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chatbot.css" asp-append-version="true" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/recommendation-cards.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/recommendation-cards.min.css" asp-append-version="true" />
    </environment>
    <link rel="stylesheet" href="~/WebFE.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <!-- PDF.js Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
    <!-- Modal Fix CSS -->
    <link rel="stylesheet" href="~/css/modal-fix.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="admin-body">
    <!-- Sidebar -->
    <div class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-header">
            <div class="d-flex align-items-center gap-2">
                <div class="sidebar-logo" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                    C
                </div>
                <div class="sidebar-title">
                    <div class="sidebar-brand">EduXtend</div>
                    <div class="sidebar-subtitle">Club Manager</div>
                </div>
            </div>
            <button class="sidebar-toggle d-lg-none" onclick="toggleSidebar()">
                <i data-lucide="x" style="width: 20px; height: 20px;"></i>
            </button>
        </div>
        
        <div class="sidebar-content">
            <nav class="sidebar-nav">
                @{ var current = ViewContext.RouteData.Values["Page"]?.ToString() ?? string.Empty; }
                <div class="sidebar-section">
                    <div class="sidebar-section-title">OVERVIEW</div>
                    <a class="sidebar-link @(current == "/ClubManager/Index" ? "active" : "")" href="/ClubManager">
                        <i data-lucide="layout-dashboard" style="width: 20px; height: 20px;"></i>
                        <span>Dashboard</span>
                    </a>
                </div>
                
                <div class="sidebar-section">
                    <div class="sidebar-section-title">CLUB MANAGEMENT</div>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/ClubInfo") ? "active" : "")" href="/ClubManager/ClubInfo">
                        <i data-lucide="info" style="width: 20px; height: 20px;"></i>
                        <span>Club Information</span>
                    </a>
                    <a class="sidebar-link @((current.StartsWith("/ClubManager/Requests") || current.StartsWith("/ClubManager/Recruitment")) ? "active" : "")" href="/ClubManager/Requests">
                        <i data-lucide="user-plus" style="width: 20px; height: 20px;"></i>
                        <span>Join Requests</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/Members") ? "active" : "")" href="/ClubManager/Members">
                        <i data-lucide="users" style="width: 20px; height: 20px;"></i>
                        <span>Members</span>
                    </a>
                </div>
                
                <div class="sidebar-section">
                    <div class="sidebar-section-title">ACTIVITIES</div>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/Activities") ? "active" : "")" href="/ClubManager/Activities">
                        <i data-lucide="calendar" style="width: 20px; height: 20px;"></i>
                        <span>All Activities</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/Attendances") ? "active" : "")" href="/ClubManager/Attendances">
                        <i data-lucide="clipboard-check" style="width: 20px; height: 20px;"></i>
                        <span>Attendances</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/CommunicationPlans") ? "active" : "")" href="/ClubManager/CommunicationPlans">
                        <i data-lucide="megaphone" style="width: 20px; height: 20px;"></i>
                        <span>Communication Plans</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/MonthlyReports") ? "active" : "")" href="/ClubManager/MonthlyReports">
                        <i data-lucide="file-text" style="width: 20px; height: 20px;"></i>
                        <span>Monthly Reports</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/ClubMovementScore") ? "active" : "")" href="/ClubManager/ClubMovementScore">
                        <i data-lucide="trophy" style="width: 20px; height: 20px;"></i>
                        <span>Club Movement Score</span>
                    </a>
                </div>
                
                <div class="sidebar-section">
                    <div class="sidebar-section-title">FINANCIAL</div>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/Financial/Dashboard") ? "active" : "")" href="/ClubManager/Financial/Dashboard">
                        <i data-lucide="pie-chart" style="width: 20px; height: 20px;"></i>
                        <span>Dashboard</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/Financial/Transactions") ? "active" : "")" href="/ClubManager/Financial/Transactions">
                        <i data-lucide="receipt" style="width: 20px; height: 20px;"></i>
                        <span>Transactions</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/Financial/MemberFunds") ? "active" : "")" href="/ClubManager/Financial/MemberFunds">
                        <i data-lucide="wallet" style="width: 20px; height: 20px;"></i>
                        <span>Member Funds</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/Financial/Reports") ? "active" : "")" href="/ClubManager/Financial/Reports">
                        <i data-lucide="file-bar-chart" style="width: 20px; height: 20px;"></i>
                        <span>Reports</span>
                    </a>
                </div>
                
                <div class="sidebar-section">
                    <div class="sidebar-section-title">CONTENT</div>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/Proposals") ? "active" : "")" href="/ClubManager/Proposals">
                        <i data-lucide="lightbulb" style="width: 20px; height: 20px;"></i>
                        <span>Proposals</span>
                    </a>
                    <a class="sidebar-link @(current.StartsWith("/ClubManager/News") ? "active" : "")" href="/ClubManager/News">
                        <i data-lucide="newspaper" style="width: 20px; height: 20px;"></i>
                        <span>Club News</span>
                    </a>
                </div>
            </nav>
        </div>
        
        <div class="sidebar-footer">
            <a class="sidebar-link" href="/">
                <i data-lucide="home" style="width: 20px; height: 20px;"></i>
                <span>Back to Home</span>
            </a>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="admin-main">
        <!-- Top Header -->
        <header class="admin-header">
            <div class="admin-header-left">
                <button class="sidebar-toggle-btn d-lg-none" onclick="toggleSidebar()">
                    <i data-lucide="menu" style="width: 24px; height: 24px;"></i>
                </button>
                <button class="sidebar-toggle-btn d-none d-lg-flex" onclick="toggleSidebarCollapse()">
                    <i data-lucide="panel-left" style="width: 20px; height: 20px;"></i>
                </button>
                <div class="admin-breadcrumb">
                    <span class="breadcrumb-item">Club Manager</span>
                    @if (ViewData["Breadcrumb"] != null)
                    {
                        <i data-lucide="chevron-right" style="width: 16px; height: 16px;"></i>
                        <span class="breadcrumb-item active">@ViewData["Breadcrumb"]</span>
                    }
                </div>
            </div>
            
            <div class="admin-header-right">
                <!-- Notification Bell -->
                <div class="header-icon-btn" onclick="toggleNotificationCenter()">
                    <i data-lucide="bell" style="width: 20px; height: 20px;"></i>
                    <div class="notification-badge"></div>
                </div>
                
                <!-- User Menu -->
                <div class="dropdown">
                    <button class="user-menu-btn" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img id="clubManagerUserAvatar" src="" alt="Avatar" referrerpolicy="no-referrer" crossorigin="anonymous" class="user-avatar" />
                        <div class="user-info d-none d-md-block">
                            <div class="user-name" id="clubManagerUserName">Club Manager</div>
                            <div class="user-role">Club Manager</div>
                        </div>
                        <i data-lucide="chevron-down" style="width: 16px; height: 16px;"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end admin-dropdown-menu" aria-labelledby="userDropdown">
                        <li>
                            <a class="dropdown-item" href="/Profile">
                                <i data-lucide="user" style="width: 16px; height: 16px;"></i>
                                <span>Profile</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/ClubManager/Settings">
                                <i data-lucide="settings" style="width: 16px; height: 16px;"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a class="dropdown-item text-danger" href="#" onclick="logout(); return false;">
                                <i data-lucide="log-out" style="width: 16px; height: 16px;"></i>
                                <span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
        
        <!-- Page Content -->
        <main class="admin-content">
            @RenderBody()
        </main>
        
        <!-- Footer -->
        <footer class="admin-footer">
            <div class="footer-content">
                <div class="footer-text">
                    &copy; 2025 EduXtend. All rights reserved.
                </div>
                <div class="footer-links">
                    <a href="/Privacy">Privacy Policy</a>
                    <span>•</span>
                    <a href="/Terms">Terms</a>
                    <span>•</span>
                    <a href="/Contact">Contact</a>
                </div>
            </div>
        </footer>
    </div>
    
    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

    <!-- AI Chatbot Component (For Club Managers) -->
    <div id="chatbotContainer" style="display: none;">
        <!-- Floating Chat Button -->
        <button id="chatbot-float-button" class="chatbot-float-button" title="AI Assistant">
            <i data-lucide="message-circle" style="width: 30px; height: 30px;"></i>
        </button>

        <!-- Chat Modal -->
        <div id="chatbot-modal" class="chatbot-modal">
            <div class="chatbot-header">
                <h3>AI Assistant - Hỗ trợ tìm CLB & Hoạt động</h3>
                <button id="chatbot-close" class="chatbot-close" title="Đóng">
                    <i data-lucide="x" style="width: 24px; height: 24px;"></i>
                </button>
            </div>

            <div class="chatbot-messages" id="chatbot-messages">
                <!-- Welcome message and quick actions will be inserted here by JavaScript -->
                <div id="chatbot-typing" class="chatbot-typing">
                    <span class="chatbot-typing-text">AI đang suy nghĩ</span>
                    <div class="chatbot-typing-dots">
                        <div class="chatbot-typing-dot"></div>
                        <div class="chatbot-typing-dot"></div>
                        <div class="chatbot-typing-dot"></div>
                    </div>
                </div>
            </div>

            <div class="chatbot-input-area">
                <input type="text" id="chatbot-input" class="chatbot-input" placeholder="Nhập tin nhắn của bạn..." />
                <button id="chatbot-send-button" class="chatbot-send-button" title="Gửi">
                    <i data-lucide="send" style="width: 20px; height: 20px;"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- CV Viewer Modal Component -->
    @await Html.PartialAsync("_CVViewerModal")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    <script src="~/js/chatbot.js" asp-append-version="true"></script>
    <script src="~/js/cv-viewer.js" asp-append-version="true"></script>

    <script>
        // Configure PDF.js worker
        if (typeof pdfjsLib !== 'undefined') {
            pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';
        }
        
        // Initialize Lucide Icons
        lucide.createIcons();

        // Check authentication status and update UI
        document.addEventListener('DOMContentLoaded', async function() {
            await updateClubManagerAuthUI();
            
            // Check for stored notifications from redirects
            checkStoredNotifications();
            
            // Show chatbot for authenticated Club Managers
            if (typeof isAuthenticated === 'function' && await isAuthenticated()) {
                const chatbotContainer = document.getElementById('chatbotContainer');
                if (chatbotContainer) {
                    chatbotContainer.style.display = 'block';
                }
                // Initialize chatbot
                if (typeof initChatbot === 'function') {
                    initChatbot();
                }
            }
        });

        async function updateClubManagerAuthUI() {
            const user = await getUser();
            console.log('[ClubManager Auth Debug] User data:', user);
            console.log('[ClubManager Auth Debug] Avatar URL:', user?.avatar);
            
            if (user && user.avatar) {
                const avatarUrl = user.avatar || '/images/default-avatar.png';
                console.log('[ClubManager Auth Debug] Setting avatar to:', avatarUrl);
                const avatarImg = document.getElementById('clubManagerUserAvatar');
                avatarImg.src = avatarUrl;
                avatarImg.onerror = function() {
                    console.error('[ClubManager Auth Debug] Failed to load avatar from:', avatarUrl);
                    this.src = '/images/default-avatar.png';
                };
                avatarImg.onload = function() {
                    console.log('[ClubManager Auth Debug] Avatar loaded successfully!');
                };
            }
            if (user && user.name) {
                document.getElementById('clubManagerUserName').textContent = user.name;
            }
        }

        function checkStoredNotifications() {
            // Check for login success message
            const loginSuccess = sessionStorage.getItem('loginSuccess');
            if (loginSuccess) {
                try {
                    const notification = JSON.parse(loginSuccess);
                    if (typeof success === 'function') {
                        success(notification.title, notification.message, 5000);
                    }
                    sessionStorage.removeItem('loginSuccess');
                } catch (e) {
                    console.error('Error parsing login success notification:', e);
                }
            }

            // Check for logout success message
            const logoutSuccess = sessionStorage.getItem('logoutSuccess');
            if (logoutSuccess) {
                try {
                    const notification = JSON.parse(logoutSuccess);
                    if (typeof info === 'function') {
                        info(notification.title, notification.message, 5000);
                    }
                    sessionStorage.removeItem('logoutSuccess');
                } catch (e) {
                    console.error('Error parsing logout success notification:', e);
                }
            }
        }

        function toggleSidebar() {
            document.getElementById('adminSidebar').classList.toggle('show');
            document.getElementById('sidebarOverlay').classList.toggle('show');
        }

        function toggleSidebarCollapse() {
            document.body.classList.toggle('sidebar-collapsed');
            localStorage.setItem('sidebarCollapsed', document.body.classList.contains('sidebar-collapsed'));
        }

        // Restore sidebar state
        if (localStorage.getItem('sidebarCollapsed') === 'true') {
            document.body.classList.add('sidebar-collapsed');
        }

        // FIX: Di chuyển modal ra body để tránh bị ảnh hưởng bởi sidebar layout
        // Khi modal nằm trong .admin-main (có margin-left), nó sẽ bị lệch
        (function() {
            function moveModalToBody(modal) {
                if (modal && modal.classList.contains('modal') && modal.parentElement !== document.body) {
                    console.log('Moving modal to body:', modal.id || modal.className);
                    document.body.appendChild(modal);
                }
            }

            function moveAllModalsToBody() {
                document.querySelectorAll('.modal').forEach(moveModalToBody);
            }

            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', moveAllModalsToBody);
            } else {
                moveAllModalsToBody();
            }

            setTimeout(moveAllModalsToBody, 500);

            document.addEventListener('show.bs.modal', function(event) {
                moveModalToBody(event.target);
            });

            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    mutation.addedNodes.forEach(function(node) {
                        if (node.nodeType === 1) {
                            if (node.classList && node.classList.contains('modal')) {
                                moveModalToBody(node);
                            }
                            if (node.querySelectorAll) {
                                node.querySelectorAll('.modal').forEach(moveModalToBody);
                            }
                        }
                    });
                });
            });

            observer.observe(document.body, { childList: true, subtree: true });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

