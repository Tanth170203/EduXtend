@* Notification Center Component *@
<div id="notification-center-container" class="notification-center-container">
    <!-- Notification Center Panel -->
    <div id="notification-center" class="notification-center">
        <div class="notification-header">
            <h3 class="notification-title">ThÃ´ng bÃ¡o</h3>
            <div class="notification-actions">
                <button class="notification-btn notification-btn-secondary" id="mark-all-read-btn" title="ÄÃ¡nh dáº¥u táº¥t cáº£ lÃ  Ä‘Ã£ Ä‘á»c">
                    <i data-lucide="check-check" style="width: 16px; height: 16px;"></i>
                </button>
                <button class="notification-btn notification-btn-secondary" id="close-notification-center-btn" title="ÄÃ³ng">
