@page
@model WebFE.Pages.Student.MyPaymentsModel
@{
    ViewData["Title"] = "Payment History";
}

<style>
    /* Page Container */
    .payment-page {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }
    
    /* Header with Gradient */
    .payment-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }
    
    .payment-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    
    .payment-header p {
        opacity: 0.9;
        margin: 0;
    }
    
    /* Tabs */
    .payment-tabs {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        border-bottom: 2px solid #e5e7eb;
        padding-bottom: 0;
    }
    
    .payment-tab {
        padding: 1rem 2rem;
        background: transparent;
        border: none;
        color: #6b7280;
        font-weight: 600;
        cursor: pointer;
        position: relative;
        transition: all 0.3s;
        border-radius: 12px 12px 0 0;
    }
    
    .payment-tab.active {
        color: #667eea;
        background: white;
    }
    
    .payment-tab.active::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .payment-tab .badge {
        background: #ef4444;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 50px;
        font-size: 0.75rem;
        margin-left: 0.5rem;
    }
    
    /* Search and Filter */
    .search-filter-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }
    
    .search-filter-card .form-control,
    .search-filter-card .form-select {
        border-radius: 12px;
        border: 2px solid #e5e7eb;
        padding: 0.75rem 1rem;
        transition: all 0.3s;
    }
    
    .search-filter-card .form-control:focus,
    .search-filter-card .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    
    .btn-search {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .btn-search:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        color: white;
    }
    
    /* Export Button */
    .btn-export {
        background: white;
        border: 2px solid #667eea;
        color: #667eea;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-export:hover {
        background: #667eea;
        color: white;
    }
    
    /* Results Summary */
    .results-summary {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
        border-left: 4px solid #667eea;
    }
    
    /* Table Card */
    .table-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
    
    .table-card table {
        margin: 0;
        width: 100%;
    }
    
    .table-card thead {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .table-card thead th {
        font-weight: 700;
        color: #374151;
        padding: 1.25rem 1rem;
        border: none;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
    }
    
    .table-card tbody tr {
        transition: all 0.2s;
        border-bottom: 1px solid #f3f4f6;
    }
    
    .table-card tbody tr:hover {
        background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    }
    
    .table-card tbody td {
        padding: 1.25rem 1rem;
        vertical-align: middle;
    }
    
    /* Transaction ID Badge */
    .transaction-id {
        color: #ef4444;
        font-weight: 700;
        font-family: 'Courier New', monospace;
    }
    
    /* Amount */
    .amount {
        color: #667eea;
        font-weight: 700;
        font-size: 1.1rem;
    }
    
    /* Status Badges */
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.875rem;
        display: inline-block;
    }
    
    .status-badge.completed {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(67, 233, 123, 0.3);
    }
    
    .status-badge.pending {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(250, 112, 154, 0.3);
    }
    
    /* Action Button */
    .btn-view {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
    }
    
    .btn-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(79, 172, 254, 0.4);
        color: white;
    }
    
    .btn-pay {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
    }
    
    .btn-pay:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        color: white;
    }
    
    /* Loading State */
    .loading-state {
        text-align: center;
        padding: 4rem 2rem;
    }
    
    .loading-spinner {
        width: 50px;
        height: 50px;
        border: 4px solid rgba(102, 126, 234, 0.2);
        border-top: 4px solid #667eea;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 1rem;
    }
    
    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }
    
    .empty-state-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .empty-state h3 {
        color: #6b7280;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .empty-state p {
        color: #9ca3af;
    }
</style>

<div class="payment-page">
    <!-- Header -->
    <div class="payment-header">
        <h1>ðŸ’³ My Payments</h1>
        <p>Manage your club payments and transactions</p>
    </div>
    
    <!-- Tabs -->
    <div class="payment-tabs">
        <button class="payment-tab active" onclick="switchPaymentTab('overview', this)">
            Payment Overview
        </button>
        <button class="payment-tab" onclick="switchPaymentTab('pending', this)">
            Pending Payments
            <span class="badge" id="pendingBadge" style="display: none;">0</span>
        </button>
        <button class="payment-tab" onclick="switchPaymentTab('history', this)">
            Payment History
        </button>
    </div>
    
    <script>
        function switchPaymentTab(tabName, element) {
            // Hide all tab contents
            document.querySelectorAll('.payment-tab-content').forEach(tab => {
                tab.style.display = 'none';
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.payment-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabName + '-tab-content').style.display = 'block';
            element.classList.add('active');
            
            // Load data if needed
            if (tabName === 'pending' && allPayments && allPayments.length > 0) {
                renderPendingPayments();
            } else if (tabName === 'history' && allPayments && allPayments.length > 0) {
                renderPayments(allPayments);
            } else if (tabName === 'overview' && allPayments && allPayments.length > 0) {
                renderOverview();
            }
            
            // Reinitialize icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }
    </script>
    
    <!-- Overview Tab -->
    <div id="overview-tab-content" class="payment-tab-content">
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stat-card pending">
                    <div class="stat-icon">
                        <i data-lucide="wallet" style="width: 24px; height: 24px;"></i>
                    </div>
                    <div class="stat-info">
                        <p class="stat-label">Pending Payments</p>
                        <h3 class="stat-value" id="overviewPendingAmount">-</h3>
                        <small class="stat-detail" id="overviewPendingCount">Loading...</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card paid">
                    <div class="stat-icon">
                        <i data-lucide="check-circle" style="width: 24px; height: 24px;"></i>
                    </div>
                    <div class="stat-info">
                        <p class="stat-label">Total Paid (2024)</p>
                        <h3 class="stat-value" id="overviewPaidAmount">-</h3>
                        <small class="stat-detail" id="overviewPaidCount">Loading...</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card overdue">
                    <div class="stat-icon">
                        <i data-lucide="alert-circle" style="width: 24px; height: 24px;"></i>
                    </div>
                    <div class="stat-info">
                        <p class="stat-label">Overdue</p>
                        <h3 class="stat-value" id="overviewOverdueCount">-</h3>
                        <small class="stat-detail">Needs attention</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card total">
                    <div class="stat-icon">
                        <i data-lucide="trending-up" style="width: 24px; height: 24px;"></i>
                    </div>
                    <div class="stat-info">
                        <p class="stat-label">Total Contribution</p>
                        <h3 class="stat-value" id="overviewTotalAmount">-</h3>
                        <small class="stat-detail">Lifetime</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="table-card">
            <h5 class="mb-3">Upcoming Payments</h5>
            <div id="upcomingPaymentsContainer">
                <div class="loading-state">
                    <div class="loading-spinner"></div>
                    <p class="text-muted">Loading payments...</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Pending Tab -->
    <div id="pending-tab-content" class="payment-tab-content" style="display: none;">
        <div class="alert alert-danger d-flex align-items-center mb-4" id="overdueAlert" style="display: none;">
            <i data-lucide="alert-circle" style="width: 20px; height: 20px;" class="me-2"></i>
            <div>You have <strong id="overdueAlertCount">0</strong> overdue payment(s)</div>
        </div>
        
        <h5 class="mb-3">Pending Payments</h5>
        <p class="text-muted small mb-4">Complete these payments before the deadline</p>
        
        <div id="pendingPaymentsList">
            <div class="loading-state">
                <div class="loading-spinner"></div>
                <p class="text-muted">Loading pending payments...</p>
            </div>
        </div>
    </div>
    
    <!-- History Tab -->
    <div id="history-tab-content" class="payment-tab-content" style="display: none;">
    
    <!-- Search and Filter -->
    <div class="search-filter-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0 fw-bold">Search Payments</h5>
            <button class="btn-export">
                <i data-lucide="download" style="width: 18px; height: 18px;"></i>
                Export Report
            </button>
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <input type="text" 
                       class="form-control" 
                       id="searchInput"
                       placeholder="Search by fund name or transaction ID...">
            </div>
            <div class="col-md-3">
                <select class="form-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="completed">Completed</option>
                    <option value="pending">Pending</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn-search w-100" onclick="searchPayments()">
                    <i data-lucide="search" style="width: 18px; height: 18px;"></i>
                    Search
                </button>
            </div>
        </div>
    </div>
    
    <!-- Results Summary -->
    <div class="results-summary">
        <p class="mb-0">
            <strong>Transaction Results</strong>
        </p>
    </div>
    
    <!-- Table -->
    <div class="table-card">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Purpose</th>
                        <th>Transaction ID</th>
                        <th>Method</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="paymentsTableBody">
                    <tr>
                        <td colspan="7">
                            <div class="loading-state">
                                <div class="loading-spinner"></div>
                                <p class="text-muted">Loading payments...</p>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    const clubId = @Model.ClubId;
    const API_BASE = 'https://localhost:5001/api';
    let allPayments = [];
    
    async function loadPayments() {
        try {
            const response = await fetch(`${API_BASE}/FundCollection/club/${clubId}/my-payments`, {
                credentials: 'include'
            });
            allPayments = await response.json();
            renderOverview();
            renderPayments(allPayments);
        } catch (error) {
            console.error('Error loading payments:', error);
            showEmptyState('Error loading payments');
        }
    }
    
    function renderOverview() {
        if (!allPayments || allPayments.length === 0) return;
        
        const pending = allPayments.filter(p => p.status === 'pending' || p.status === 'unconfirmed');
        const paid = allPayments.filter(p => p.status === 'paid' || p.status === 'confirmed');
        const overdue = pending.filter(p => p.fundCollectionRequest && new Date(p.fundCollectionRequest.dueDate) < new Date());
        
        const pendingAmount = pending.reduce((sum, p) => sum + p.amount, 0);
        const paidAmount = paid.reduce((sum, p) => sum + p.amount, 0);
        const totalAmount = allPayments.reduce((sum, p) => sum + p.amount, 0);
        
        document.getElementById('overviewPendingAmount').textContent = formatCurrency(pendingAmount);
        document.getElementById('overviewPendingCount').textContent = `${pending.length} payment(s)`;
        document.getElementById('overviewPaidAmount').textContent = formatCurrency(paidAmount);
        document.getElementById('overviewPaidCount').textContent = `${paid.length} payment(s)`;
        document.getElementById('overviewOverdueCount').textContent = overdue.length;
        document.getElementById('overviewTotalAmount').textContent = formatCurrency(totalAmount);
        
        // Update pending badge
        const badge = document.getElementById('pendingBadge');
        if (pending.length > 0) {
            badge.textContent = pending.length;
            badge.style.display = 'inline-block';
        }
        
        // Render upcoming payments
        const container = document.getElementById('upcomingPaymentsContainer');
        if (pending.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <i data-lucide="check-circle" style="width: 48px; height: 48px; color: #28a745;"></i>
                    <h5 class="mt-3">All caught up!</h5>
                    <p class="text-muted">You have no pending payments</p>
                </div>
            `;
        } else {
            container.innerHTML = pending.slice(0, 5).map(p => {
                const dueDate = p.fundCollectionRequest ? p.fundCollectionRequest.dueDate : null;
                const isOverdue = dueDate && new Date(dueDate) < new Date();
                return `
                    <div class="card mb-3 ${isOverdue ? 'border-danger' : ''}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="fw-bold">${escapeHtml(p.fundCollectionTitle || 'Payment')}</h6>
                                    <small class="text-muted">Due: ${dueDate ? new Date(dueDate).toLocaleDateString('en-GB') : 'N/A'}</small>
                                </div>
                                <h5 class="text-primary">${formatCurrency(p.amount)}</h5>
                            </div>
                            <button class="btn btn-${isOverdue ? 'danger' : 'primary'} btn-sm mt-2" onclick="showPaymentModal(${p.id})">
                                <i data-lucide="credit-card" style="width: 14px; height: 14px;"></i>
                                Pay Now
                            </button>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    }
    
    function renderPendingPayments() {
        const pending = allPayments.filter(p => p.status === 'pending' || p.status === 'unconfirmed');
        const overdue = pending.filter(p => p.fundCollectionRequest && new Date(p.fundCollectionRequest.dueDate) < new Date());
        
        // Update overdue alert
        const alert = document.getElementById('overdueAlert');
        if (overdue.length > 0) {
            document.getElementById('overdueAlertCount').textContent = overdue.length;
            alert.style.display = 'flex';
        } else {
            alert.style.display = 'none';
        }
        
        const container = document.getElementById('pendingPaymentsList');
        if (pending.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <i data-lucide="check-circle" style="width: 64px; height: 64px; color: #28a745;"></i>
                    <h5 class="mt-3">All caught up!</h5>
                    <p class="text-muted">You have no pending payments</p>
                </div>
            `;
        } else {
            container.innerHTML = pending.map(p => {
                const dueDate = p.fundCollectionRequest ? p.fundCollectionRequest.dueDate : null;
                const description = p.fundCollectionRequest ? p.fundCollectionRequest.description : '';
                const isOverdue = dueDate && new Date(dueDate) < new Date();
                return `
                    <div class="card mb-3 ${isOverdue ? 'border-danger' : ''}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="fw-bold">${escapeHtml(p.fundCollectionTitle || 'Payment')}</h5>
                                    <span class="badge ${isOverdue ? 'bg-danger' : 'bg-warning'}">${isOverdue ? 'Overdue' : 'Pending'}</span>
                                </div>
                                <h4 class="text-primary">${formatCurrency(p.amount)}</h4>
                            </div>
                            <p class="text-muted">${escapeHtml(description || 'No description')}</p>
                            <div class="row g-3 mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Amount</small>
                                    <strong>${formatCurrency(p.amount)}</strong>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Due Date</small>
                                    <strong class="${isOverdue ? 'text-danger' : ''}">${dueDate ? new Date(dueDate).toLocaleDateString('en-GB') : 'N/A'}</strong>
                                </div>
                            </div>
                            <button class="btn btn-${isOverdue ? 'danger' : 'primary'} w-100" onclick="showPaymentModal(${p.id})">
                                <i data-lucide="credit-card" style="width: 16px; height: 16px;"></i>
                                Pay Now
                            </button>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    }
    
    function renderPayments(payments) {
        const tbody = document.getElementById('paymentsTableBody');
        
        if (!payments || payments.length === 0) {
            showEmptyState('No payments found');
            return;
        }
        
        tbody.innerHTML = payments.map(p => {
            const date = new Date(p.paidAt || p.createdAt).toLocaleDateString('en-GB');
            const statusClass = p.status === 'completed' || p.status === 'paid' ? 'completed' : 'pending';
            const statusText = p.status === 'completed' || p.status === 'paid' ? 'Completed' : 'Pending';
            
            return `
                <tr>
                    <td>${date}</td>
                    <td>
                        <div class="fw-bold">${escapeHtml(p.fundCollectionTitle || 'Payment')}</div>
                        <small class="text-muted">${escapeHtml(p.clubName || '')}</small>
                    </td>
                    <td>
                        <span class="transaction-id">${p.vnpayTransactionId || 'PAY-' + p.id}</span>
                    </td>
                    <td>${p.paymentMethod || 'Cash'}</td>
                    <td>
                        <span class="amount">${formatCurrency(p.amount)}</span>
                    </td>
                    <td>
                        <span class="status-badge ${statusClass}">${statusText}</span>
                    </td>
                    <td>
                        ${p.status === 'pending' ? `
                            <button class="btn-pay" onclick="payWithVNPAY(${p.id})">
                                <i data-lucide="credit-card" style="width: 16px; height: 16px;"></i>
                                Pay
                            </button>
                        ` : `
                            <button class="btn-view" onclick="viewDetails(${p.id})">
                                <i data-lucide="eye" style="width: 16px; height: 16px;"></i>
                                View
                            </button>
                        `}
                    </td>
                </tr>
            `;
        }).join('');
        
        // Reinitialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    }
    
    function showEmptyState(message) {
        const tbody = document.getElementById('paymentsTableBody');
        tbody.innerHTML = `
            <tr>
                <td colspan="7">
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i data-lucide="inbox" style="width: 40px; height: 40px;" class="text-muted"></i>
                        </div>
                        <h3>${message}</h3>
                        <p>Your payment history will appear here</p>
                    </div>
                </td>
            </tr>
        `;
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    }
    
    function searchPayments() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value;
        
        let filtered = [...allPayments];
        
        if (searchTerm) {
            filtered = filtered.filter(p => 
                (p.fundCollectionTitle && p.fundCollectionTitle.toLowerCase().includes(searchTerm)) ||
                (p.vnpayTransactionId && p.vnpayTransactionId.toLowerCase().includes(searchTerm))
            );
        }
        
        if (statusFilter) {
            filtered = filtered.filter(p => p.status === statusFilter);
        }
        
        renderPayments(filtered);
    }
    
