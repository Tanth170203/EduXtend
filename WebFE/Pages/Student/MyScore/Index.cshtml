@page
@using BusinessObject.DTOs.MovementRecord
@model WebFE.Pages.Student.MyScore.IndexModel
@{
    ViewData["Title"] = "My Activity Scores";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1 class="fw-bold mb-1">My Activity Scores</h1>
            <p class="text-muted mb-0">View summary and detailed scores by semester</p>
        </div>
    </div>

    <!-- Alert -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Summary != null)
    {
        <!-- Quick Stats -->
        <div class="row g-3 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-2 fw-medium">Average Score</p>
                            <h2 class="mb-0 fw-bold">@Model.Summary.AverageScore.ToString("F1")</h2>
                        </div>
                        <div class="rounded-3 p-3" style="background:#e3f2fd"><i class="bi bi-graph-up" style="font-size:1.5rem;"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-2 fw-medium">Highest Score</p>
                            <h2 class="mb-0 fw-bold">@Model.Summary.HighestScore.ToString("F1")</h2>
                        </div>
                        <div class="rounded-3 p-3" style="background:#e8f5e9"><i class="bi bi-arrow-up-circle" style="font-size:1.5rem;"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-2 fw-medium">Lowest Score</p>
                            <h2 class="mb-0 fw-bold">@Model.Summary.LowestScore.ToString("F1")</h2>
                        </div>
                        <div class="rounded-3 p-3" style="background:#fff3e0"><i class="bi bi-arrow-down-circle" style="font-size:1.5rem;"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4 d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-2 fw-medium">Total Semesters</p>
                            <h2 class="mb-0 fw-bold">@Model.Summary.TotalSemesters</h2>
                        </div>
                        <div class="rounded-3 p-3" style="background:#f3e5f5"><i class="bi bi-calendar-event" style="font-size:1.5rem;"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary -->
        <div class="mb-3">
            <h5 class="text-muted"><i class="bi bi-bar-chart-line"></i> <strong>@Model.Summary.Records.Count</strong> recorded semesters</h5>
        </div>

        <!-- Table -->
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Semester</th>
                                <th>Total Score</th>
                                <th>Criteria Achieved</th>
                                <th>Evaluation</th>
                                <th>Last Updated</th>
                                <th class="text-end" style="width:160px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (!Model.Summary.Records.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox" style="font-size:3rem;"></i>
                                    <div class="mt-3">No activity score data available</div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var record in Model.Summary.Records.OrderByDescending(r => r.SemesterId))
                            {
                                var percent = (record.TotalScore / 100.0) * 100.0;
                                var cls = percent >= 80 ? "success" : percent >= 60 ? "warning" : "danger";
                                var eval = percent >= 80 ? "Excellent" : percent >= 60 ? "Good" : "Needs Improvement";
                                <tr>
                                    <td class="fw-semibold">@record.SemesterName</td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-@cls">@record.TotalScore.ToString("F1")</span>
                                            <small class="text-muted">/ 100</small>
                                        </div>
                                    </td>
                                    <td><span class="badge bg-info">@record.DetailCount criteria</span></td>
                                    <td><span class="badge bg-@cls">@eval</span></td>
                                    <td>@(record.LastUpdated?.ToString("dd/MM/yyyy") ?? record.CreatedAt.ToString("dd/MM/yyyy"))</td>
                                    <td class="text-end">
                                        <a href="/Student/MyScore/Detail?id=@record.Id" class="btn btn-sm btn-primary rounded-pill">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Progress cards -->
        <div class="mt-4">
            <h6 class="mb-3 text-muted">Progress by Semester</h6>
            <div class="row">
                @foreach (var record in Model.Summary.Records.OrderBy(r => r.SemesterId))
                {
                    var percent = (record.TotalScore / 100.0) * 100.0;
                    var progressClass = percent >= 80 ? "success" : percent >= 60 ? "warning" : "danger";
                    <div class="col-md-4 mb-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <h6 class="mb-0">@record.SemesterName</h6>
                                    <span class="small text-muted">@percent.ToString("F1")%</span>
                                </div>
                                <div class="progress" style="height: 16px;">
                                    <div class="progress-bar bg-@progressClass" style="width:@percent%" role="progressbar"></div>
                                </div>
                                <small class="text-muted d-block mt-2">Total Score: @record.TotalScore.ToString("F1") / 100</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">No activity scores yet</h5>
                    <p class="mb-0">Join activities and submit evidence to earn points.</p>
                    <a href="/Student/MyEvidences" class="btn btn-primary btn-sm mt-3 rounded-pill">
                        <i class="bi bi-file-plus"></i> Submit Evidence Now
                    </a>
                </div>
            </div>
        </div>
    }
</section>
