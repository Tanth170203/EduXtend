@page
@using BusinessObject.DTOs.MovementRecord
@model WebFE.Pages.Student.MyScore.DetailModel
@{
    ViewData["Title"] = "Activity Score Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="container my-5">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">
        <div>
            <h1 class="fw-bold mb-1">Activity Score Details</h1>
            <p class="text-muted mb-0">View scores by group and criterion</p>
        </div>
        <a href="/Student/MyScore" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    @if (Model.Record != null)
    {
        <!-- Summary -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-lg-8">
                        <h5 class="fw-semibold mb-3">@Model.Record.SemesterName</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="small text-muted">Full name</div>
                                <div class="fw-semibold">@Model.Record.StudentName</div>
                                <div class="small text-muted mt-2">Student ID</div>
                                <div class="fw-semibold">@Model.Record.StudentCode</div>
                            </div>
                            <div class="col-md-6">
                                <div class="small text-muted">Created on</div>
                                <div class="fw-semibold">@Model.Record.CreatedAt.ToString("dd/MM/yyyy")</div>
                                <div class="small text-muted mt-2">Updated</div>
                                <div class="fw-semibold">@(Model.Record.LastUpdated?.ToString("dd/MM/yyyy HH:mm") ?? "-")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        @{
                            var percent = (Model.Record.TotalScore / 100.0) * 100.0;
                            var cls = percent >= 80 ? "success" : percent >= 60 ? "warning" : "danger";
                        }
                        <div class="text-muted">Total score</div>
                        <div class="display-6 fw-bold text-primary">@Model.Record.TotalScore.ToString("F1")</div>
                        <small class="text-muted">/ 100</small>
                        <div class="progress mt-2" style="height:10px;">
                            <div class="progress-bar bg-@cls" style="width:@percent%" role="progressbar"></div>
                        </div>
                        <small class="text-muted">@percent.ToString("F1")% completed</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 pt-4">
                <h5 class="mb-0 fw-semibold"><i class="bi bi-list-check me-1"></i> Details by criterion</h5>
            </div>
            <div class="card-body pt-0">
                @if (Model.Record.Details.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Criterion group</th>
                                    <th>Criterion</th>
                                    <th class="text-center">Max score</th>
                                    <th class="text-center">Score achieved</th>
                                    <th>Date awarded</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in Model.Record.Details.OrderBy(x => x.GroupName).ThenBy(x => x.CriterionTitle))
                                {
                                    var p = (d.Score / d.CriterionMaxScore) * 100.0;
                                    var b = p >= 80 ? "success" : p >= 60 ? "warning" : "info";
                                    <tr>
                                        <td><span class="badge bg-secondary">@d.GroupName</span></td>
                                        <td class="fw-semibold">@d.CriterionTitle</td>
                                        <td class="text-center">@d.CriterionMaxScore</td>
                                        <td class="text-center">
                                            <div class="progress" style="height:16px; width:110px; margin:0 auto;">
                                                <div class="progress-bar bg-@b" style="width:@p%" role="progressbar"></div>
                                            </div>
                                            <small class="text-muted">@p.ToString("F0")%</small>
                                        </td>
                                        <td>@d.AwardedAt.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- By Group -->
                    <div class="mt-4">
                        <h6 class="text-muted">Summary by criterion group</h6>
                        <div class="row">
                            @{
                                var groups = Model.Record.Details
                                    .GroupBy(g => g.GroupName)
                                    .Select(g => new { Group = g.Key, Score = g.Sum(x => x.Score), Count = g.Count() })
                                    .OrderByDescending(x => x.Score);
                            }
                            @foreach (var g in groups)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body">
                                            <h6 class="mb-1">@g.Group</h6>
                                            <div class="fw-bold text-primary fs-5">@g.Score points</div>
                                            <small class="text-muted">@g.Count criteria achieved</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox" style="font-size:3rem; color:#9ca3af;"></i>
                        <p class="text-muted mt-3 mb-0">No detailed scores yet</p>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning shadow-sm">
            <i class="bi bi-exclamation-triangle me-2"></i> Activity score record not found.
        </div>
    }
</section>
